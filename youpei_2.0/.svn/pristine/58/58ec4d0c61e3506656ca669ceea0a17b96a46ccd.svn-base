<include file="Common:header"/>

<div id="page_user" title="{$title}" class="kap-page kap-page-current">
 <div class="kap-top ty-menu-top">
    <div id="tools_msg" class="ty-tools ty-tools-inner ty-tools-current">
        <span class="title">{$title}<span class="num"></span></span>
        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn left btn-user" title="返回" data-icon="ɒ"></a>
        <a href="{:U('Index/index')}" class="btn right btn-user" title="返回首页" data-icon="Ņ"></a>
    </div>
</div>
  <div class="user-area" style="margin-top: -0.4rem;">
     <div class="ty-user-cover img">
           <img src="/Public/images/group.jpg" width="100%" style="height: 8rem;">
     </div>
    </div>
     <div  class="Group" style="padding-bottom: 3.125rem;">
      <ul class="list-talent-product">
          <empty name="groupList">
              <p style="text-align: center;">暂无团购</p>
              <else/>
              <volist name="groupList" id="val" offset='0' length='10' key="k">
                  <li class="item on" onclick="getProduct({$val['id']})">
                      <img class="thumb" src="{$val['image']}">
                        <span class="title"><font style="" color="#1d709c">
                            <nobr>{$val['title']}</nobr>
                        </font></span>
                      <!--<span class="status"></span>-->
                      <span class="original">原价:{$val['original_price']}元/人</span>
                      <span class="discount">组团价:</span>
                      <span class="price">{$val['price']}</span>
                      <div class="condition">
                          <label>{$val['min_people']}人成班 已有<span>{$val['order_count']}人</span>报名</label><br/>
                          <time>{$val['end_time']|date="Y-m-d",###}截止</time>
                      </div>
                      <!--<span>{$val['status'] == 1?'集结中':($val['status'] == 2?'可开团':($val['status'] == 3?'已开团':($val['status'] == 4?'已满人':'已取消')))}</span>-->
                      <div class="gogroups">
                          <span>去入团>></span>
                      </div>
                  </li>
              </volist>
          </empty>
                    <!--<li data-icon="Ĩ" class="item-more">-->
                    <!--点击载入更多-->
                </li>
                    </ul>
    </div>
      <!-- 底部菜单 -->
        <div class="kap-bottom ty-menu-bottom">
 <div id="tools_idx" class="ty-tools ty-tools-idx ty-tools-current">
            <a href="{:U('Index/index',array('current'=>'1'))}" data-ty-target="#page_hot" data-icon=""><i style="background: url('__PUBLIC__/images/1497609486.png') center center/70% 70% no-repeat; display:block;" class="on"> </i>首页</a>
             <i class="border"></i>
            <a href="{:U('Groups/index',array('current'=>'2'))}" class="current" <if condition='$current eq 2'>class="current"</if> data-ty-target="#page_discover" data-icon="" onclick="_hmt.push(['_trackEvent', 'footbar', 'click', '发现'])"><i style="background: url('__PUBLIC__/images/1497609958.png')center center/70% 70% no-repeat; display:block;" class="on"> </i>入团</a>
             <i class="border"></i>
            <a href="{:U('Groups/addGroup',array('current'=>'3'))}" <if condition='$current eq 3'>class="current"</if> data-ty-target="#detail_msg" data-icon="" onclick="_hmt.push(['_trackEvent', 'footbar', 'click', '消息'])"><i style="background: url('__PUBLIC__/images/1497609579.png')center center/70% 70% no-repeat; display:block;" class="on"> </i>组团<i id="new_msg_alert"></i></a>
             <i class="border"></i>
            <a href="{:U('Groups/myGroups',array('current'=>'4'))}" <if condition='$current eq 4'>class="current"</if> data-ty-target="#page_user" data-icon="" onclick="_hmt.push(['_trackEvent', 'footbar', 'click', '我的'])"><i style="background: url('__PUBLIC__/images/1497609711.png')center center/70% 70% no-repeat; display:block;" class="on"></i>我的团</a>
        </div>
        </div>
   </div>
   <script src="__PUBLIC__/js/home/groups.js" type="text/javascript" charset="utf-8"></script>
<include file="Common:footer"/>
</body>
</html>