.footer ul li a img{
	margin-top: 0.52rem;
}
.footer ul li a span{
	margin-left: 0.14rem;
}
body,html{
	background: #f1f1f1;
}
.middle{
	padding-top: 1.2rem;
	padding-bottom: 1.6rem;
}



.countdown{
	height: 1.98rem;
	background: #386998;
	margin: 0.12rem 0 0.15rem;
}

.countdown h3{
	font-weight: normal;
	color: white;
	text-align: center;
	font-size: 0.48rem;
	line-height: 1rem;
}
.time{
	color: white;
	font-size: 0.48rem;
	padding-left: 1.24rem;
}
.time span{
	color: #386998;
	font-size: 0.48rem;
	width: 0.99rem;
	text-align: center;
	height: 0.63rem;
	line-height: 0.63rem;
	background: white;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	margin: 0 0.24rem 0 0.36rem;
	display: inline-block;
}


.chart{
	overflow: hidden;
}
.chart ul li{
	height: 3rem;
	background: white;
	margin-bottom: 0.28rem;

}
.chart .img{
	float: left;
	margin-left: 0.99rem;
	margin-top: 0.53rem;
	position: relative;
	margin-right: 0.7rem;
}
.img .hat{
	width: 1.79rem;
	height: 0.87rem;
	display: none;
}
.img .head{
	width: 2.07rem;
	height: 2.07rem;
	border-radius: 50%;
	-webkit-border-radius:50%;
}
.chart .text{
	float: left;
}
.text p{
	font-size: 0.48rem;
	line-height: 0.72rem;
}
.text p:first-child{
	margin-top: 0.45rem;
}
.text p i{
	height: 0.23rem;
	width: 0.23rem;
	border-radius: 50%;
	-webkit-border-radius:50%;
	background: #4c4c4c;
	display: block;
	float: left;
	margin-top: 0.25rem;
	margin-right: 0.2rem;
}
.text p span{
	color: #386998;
	font-size: 0.48rem;
}

.chart .order{
	float: right;
	position: relative;
	margin-right: 0.6rem;
	margin-top: 0.4rem;
}
.chart .order img{
	height: 2.28rem;
	width: 1.8rem;
}
.chart .order span{
	position: absolute;
	font-size: 0.72rem;
	color: white;
	top: 0.35rem;
	/*left: 0.65rem;*/
	width: 1.8rem;
	left:-0.05rem;
	text-align: center;
}


.chart li:first-child .img{
	float: left;
	margin-left: 0.99rem;
	margin-top: 0.77rem;
}
.chart li:first-child .img .hat{
	position: absolute;
	top: -0.7rem;
	left: 0.15rem;
}
.chart li:nth-child(2) .img{
	float: left;
	margin-left: 0.99rem;
	margin-top: 0.77rem;
}
.chart li:nth-child(2) .img .hat{
	position: absolute;
	top: -0.7rem;
	left: 0.15rem;
}
.chart li:nth-child(3) .img{
	float: left;
	margin-left: 0.99rem;
	margin-top: 0.77rem;
}
.chart li:nth-child(3) .img .hat{
	position: absolute;
	top: -0.7rem;
	left: 0.15rem;
}