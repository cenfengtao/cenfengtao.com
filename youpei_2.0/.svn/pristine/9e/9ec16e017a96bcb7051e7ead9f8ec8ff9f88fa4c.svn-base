<body class="kap-loading ty-view-all top">
    <include file="Common:common"/>
    <header class="header">
      <a href="javascript:history.back()" class="back">
          <img src="../../../../Public/images/back.png" alt="">
      </a>
      <h3>机构全景图片</h3>
      <a href="###" id="classify" class="home"><span>&and;</span>分类</a>
    </header>
    <ul style="display: none;" class="type">
    </ul>
    <div class="content">
      <div class="swiper-container">
        <div class="swiper-wrapper">
        </div>
      </div>
    </div>    
<script src="__PUBLIC__/Home/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
<script src="__PUBLIC__/Home/js/pageloader.js" type="text/javascript" charset="utf-8"></script>
<script src="__PUBLIC__/js/home/rem.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript" src="__PUBLIC__/js/home/swiper.min.js" ></script>
<script>

//    获取url参数
function GetRequest() {
    var url = location.search; //获取url中"?"符后的字串
    var theRequest = new Object();
    if (url.indexOf("?") != -1) {
        var str = url.substr(1);
        strs = str.split("&");
        for (var i = 0; i < strs.length; i++) {
            theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);
        }
    }
    return theRequest;
}
var id=GetRequest().id;
$(function(){
  $.ajax({
        type:"get",
        url:"/index.php/Organization/ajaxFullShot",
        async: true,
        dataType:"json",
        data:{
          id:id
        },
        success:function(data){
          var classity=data.data.class;
          var classLength=classity.length;
          var classImg=data.data.classContent;
          var classContentLength=classImg.length;
          for(var i=0; i<classLength; i++){
            $(".type").append(
              '<li class="'+classity[i].id+'">'+classity[i].class_title+'</li>'
            )
          }
          for(var j=0; j<classContentLength; j++){
            // $(".swiper-wrapper").html("")
            $(".swiper-wrapper").append(
                '<div class="swiper-slide  all">'+
                  '<img src="'+classImg[j].image+'"/>'+
                  '<div class="desc">'+
                  '<p>'+classImg[j].description+'</p>'+
                  '</div>'+
                '</div>'
              )
          }
           $("ul li").click(function(){
             $(".home span").html("&and;")
            $("ul").slideUp(1000)
          })
            var mySwiper = new Swiper('.swiper-container',{
              loop: true,
              direction: 'vertical',
            });
        }

    })
    
  setTimeout(function(){
    $(".type li").click(function(){
      $(".swiper-wrapper").html("")
      var typeId=$(this).attr("class");
      $.ajax({
          type:"get",
          url:"/index.php/Organization/ajaxFullShot",
          async: true,
          dataType:"json",
          data:{
            class_id:typeId,
            id:id
          },
          success:function(data){
            var classity=data.data.class;
            var classLength=classity.length;
            var classImg=data.data.classContent;
            var classContentLength=classImg.length;
            $(".content").html(
                '<div class="swiper-container">'+
                  '<div class="swiper-wrapper">'+
                  '</div>'+
               ' </div>'
              )
            for(var s=0; s<classContentLength; s++){
              $(".swiper-wrapper").append(
                  '<div class="swiper-slide  all">'+
                    '<img src="'+classImg[s].image+'"/>'+
                    '<div class="desc">'+
                    '<p>'+classImg[s].description+'</p>'+
                    '</div>'+
                  '</div>'
                )
            }
             $("ul li").click(function(){
               $(".home span").html("&and;")
              $("ul").slideUp(1000)
            })
            var mySwipers = new Swiper('.swiper-container',{
              loop: true,
              direction: 'vertical',
            });
          }
      })
    })
  },1800)
})
</script>
<script type="text/javascript">
    $(function(){
      $("#classify").click(function(){
        if($("ul").css("display")=="none"){
          $(".home span").html("&or;")
        $("ul").slideDown(1000);
        }else{
        $(".home span").html("&and;")
        $("ul").slideUp(1000);
    }
      })
    })
</script>
</body>
</html>
