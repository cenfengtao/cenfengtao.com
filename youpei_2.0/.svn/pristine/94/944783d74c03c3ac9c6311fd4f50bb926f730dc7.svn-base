<include file="Common:header"/>
<!-- iCheck -->
<link href="__PUBLIC__/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<link rel="stylesheet" href="__PUBLIC__/css/admin/main.css">
<link rel="stylesheet" type="text/css" href="__PUBLIC__/js/webuploader/webuploader.css" />
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>奖品管理</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <form id="myform" method="post" data-parsley-validate class="form-horizontal form-label-left form-youpei"  autocomplete="off">
                            <input type='hidden' id='id' class='form-control' value='{$object.id}'/>
                              <input type='hidden' id='activityid' class='form-control' value='{$activityid}'/> 
                               <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">类型 <span class="required">*</span></label>
                                    <div class="col-md-2 col-sm-6 col-xs-12">
                                        <select class="form-control" name="father_id" id="formselect" required="required">
                                            <option>请选择</option>
                                          <option value="red" <if condition="$object['type'] == 'red' ">selected</if>>red</option>
                                           <option value="integral" <if condition="$object['type'] == 'integral' ">selected</if>>integral</option>
                                           <option value="coupon" <if condition="$object['type'] == 'coupon' ">selected</if>>coupon</option>
                                           <option value="prize" <if condition="$object['type'] == 'prize' ">selected</if>>prize</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">数值   <span class="required">*</span>
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="amount"  id="amount" class="form-control col-md-7 col-xs-12" value="{$object.amount}">
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">奖品标题
                                     <span class="required">*</span>
                                    </label>

                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="title" name="title" value="{$object.title}" class="form-control col-md-7 col-xs-12" >
                                    </div>
                                </div>
                              <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">概率 
                                     <span class="required">*</span>
                                    </label>

                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="weight" name="weight" class="form-control col-md-7 col-xs-12" value="{$object.weight}">
                                    </div>
                                </div>
                             <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">上传奖品图 <span class="required">*</span>
                                    </label>
                                    <div class="cropper-drag-box cropper-modal cropper-crop">
                                       <div id="filePicker" style=''>上传图片</div>
                                        <div style=''>图片大小:<span id='img_size'></span> (50*40px)，格式为 gif, jpg, jpeg, png</div>
                                    </div>
                                </div>
                                 
                                  <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">预览图 <span class="required">*</span>
                                    </label>

                                   <if condition="$object['pic'] !='' ">
                                    <img width='70' height='70'  id='preview' src='__ROOT__/{$object.pic}'>
                                     <else/>
                                    <img id='preview' src='' ref='' width='70' height='70' style='display:none'/> 
                                    </if>
                                   <input id="adFile" name="adFile" class="text wstipt form-control" tabindex="3" autocomplete="off" style="" type="hidden" value="{$object.pic}"/>
                                </div>

                                  <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">库存   
                                     <span class="required">*</span>
                                    </label>

                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="count" name="count" class="form-control col-md-7 col-xs-12" value="{$object.count}">
                                    </div>
                                </div>

                                   <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    奖品说明   
                                     <span class="required">*</span>
                                    </label>

                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="explain" name="explain" class="form-control col-md-7 col-xs-12" value="{$object.explain}">
                                    </div>
                                </div>
                          
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">重置</button>
                                        <button type="submit" class="btn btn-success">提交</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<!-- iCheck -->
<script src="__PUBLIC__/vendors/iCheck/icheck.min.js"></script>
<script src="__PUBLIC__/js/common.js"></script>
<script src="__PUBLIC__/js/formValidator/formValidator-4.1.3.js"></script>
<script src="__PUBLIC__/js/plugins/plugins.js"></script>
<script type="text/javascript" src="__PUBLIC__/js/upload.js"></script>
<script type="text/javascript" src="__PUBLIC__/js/webuploader/webuploader.js"></script>
<script>
var ThinkPHP = window.Think = {
            "ROOT"   : "__ROOT__",
            "PUBLIC" : "__PUBLIC__",
            "DOMAIN" : "{:HTTPDomain()}"
   };

$( function () {
       $.formValidator.initConfig({
           theme:'Default',mode:'AutoTip',formID:"myform",debug:true,submitOnce:true,onSuccess:function(){
                   add();
                   return false;
            },onError:function(msg){
        }});
       
       $("#formselect").formValidator({onFocus:"请选择所属类型"}).inputValidator({min:1,onError: "请选择所属类型"});

       $("#amount").formValidator({onShow:"",onFocus:"请输入数值",onCorrect:""}).inputValidator({min:1,max:20,onError:"数值不能为空,请确认"});

       $("#title").formValidator({onShow:"",onFocus:"请输入奖品标题",onCorrect:""}).inputValidator({min:1,max:20,onError:"奖品标题不能为空,请确认"});

       $("#weight").formValidator({onShow:"",onFocus:"请输入概率1-99之间",onCorrect:""}).inputValidator({min:1,max:20,onError:"概率不能为空,请确认"});

      $("#adFile").formValidator({onshow: "",onfocus: "请上传图片", oncorrect: "" }).inputValidator({ min: 1, max: 100,onerrormin: "（错误）不能为空",onerrormax: "（错误）", onError: "请上传图片" 
        });

        $("#count").formValidator({ onShow: "", onFocus:"库存不能为空",onCorrect: "" }).regexValidator({ regExp: "num1", dataType: "enum", onError: "库存格式不正确" });

        var uploading = null;
     uploadFile({
          server:"{:U('Userlottery/uploadPic')}",
          pick:'#filePicker',
          formData: {dir:'adspic'},
          callback:function(f){
            layer.close(uploading);
            var json = WST.toJson(f);
            $('#preview').attr('src',ThinkPHP.DOMAIN+"/"+json.file.savepath+json.file.savethumbname);
            $('#adFile').val(json.file.savepath+json.file.savename);
            $('#preview').show();
          },
          progress:function(rate){
            uploading = WST.msg('正在上传图片，请稍后...');
          }
      }); 
            
});
function add(){
   var params = WST.fillForm('.form-control');
 
  if(params.adFile==''){
       Plugins.Tips({title:'信息提示',icon:'error',content:'请上传广告图片!',timeout:1000});
       return;
     }
  
    Plugins.waitTips({title:'信息提示',content:'正在提交数据，请稍后...'});
    $.post("{:U('Userlottery/edit')}",params,function(data,textStatus){
    var json = WST.toJson(data);
      if(json.status=='1'){
        Plugins.setWaitTipsMsg({ content:'操作成功',timeout:1000,callback:function(){
            self.location=document.referrer;
        }});
      }else{
        Plugins.closeWindow();
        Plugins.Tips({title:'信息提示',icon:'error',content:json.msg||'操作失败!',timeout:1000});
      }
    });
   
}
</script>
</body>
</html>
