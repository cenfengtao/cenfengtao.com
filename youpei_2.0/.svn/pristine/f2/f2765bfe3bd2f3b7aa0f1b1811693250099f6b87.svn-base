                <div class="winners">
                    <span>—— 恭喜中奖者 ——</span>
                </div>
                <div id="scrollDiv">
                    <div class="scrollText">
                        <ul>
                            <volist name="re" id="vo" mod="2">
                                <li>
                                    <nobr><span>{$vo['username']}获得{$vo['prize']}</span></nobr>
                                </li>
                            </volist>
