                        </div>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">学生名</th>
                                        <th class="column-title">手机</th>
                                        <th class="column-title no-link last"><span class="nobr">操作</span></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <notempty name='fault'>
                                        <tr class="even pointer">
                                            <td>{$fault.username}</td>
                                            <td>{$fault.mobile}</td>
                                            <td class="last">
                                                <a href="" class="btn btn-info btn-xs btn_access"></a>
                                                <a href="/admin.php/ClassTime/checkFaultTime"
                                                   class="btn btn-danger btn-xs btn_access" access_id="306">查看详细</a>
                                            </td>
                                        </tr>
                                    </notempty>
                                    <notempty name='leave'>
                                        <tr class="even pointer">
                                            <td>{$leave.username}</td>
                                            <td>{$leave.mobile}</td>
                                            <td class="last">
                                                <a href="" class="btn btn-info btn-xs btn_access"></a>
                                                <a href="/admin.php/ClassTime/checkLeave"
                                                   class="btn btn-danger btn-xs btn_access" access_id="515">查看详细</a>
                                            </td>
                                        </tr>
                                    </notempty>
                                    <foreach name="classList" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['username']}</td>
                                            <td>{$val['mobile']}</td>
                                            <td class="last">
                                                <a href="/admin.php/ClassTime/checkTime?userId={$val['user_id']}" access_id="199"
                                                   class="btn btn-info btn-xs btn_access">查看详细</a>
                                                <a href="javascript:deleteTimeByUser({$val['user_id']})"
                                                   class="btn btn-danger btn-xs btn_access" access_id="310">删除该学生</a>
                                            </td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                            </div>
