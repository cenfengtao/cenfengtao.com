<script>

    function deleteTimeByUser(userId) {
        layer.open({
            type: 0,
            title: '确认信息',
            btn: ['确认', '取消'],
            icon: 3,
            closeBtn: 2,
            content: '确定删除该学生的课程表？',
            yes: function () {
                var ajaxUrl = '/admin.php/ClassTime/deleteTimeByUser';
                $.post(ajaxUrl,{user_id:userId}, function (result) {
                    if (result.status == 1) {
                        return dialog.success(result.message, '');
                    } else {
                        return dialog.error(result.message);
                    }
                }, 'json')
            }
        });
    }

    function addTime() {
        layer.open({
            type: 1,
            title: '上传课程表',
            skin: 'layui-layer-rim',
            area: ['370px', '240px'], //宽高
            content: "<form style='margin-top:20px;' id='demo-form2' method='post' data-parsley-validate class='form-horizontal form-label-left form-youpei' action='/admin.php/ClassTime/addTime' enctype='multipart/form-data'><div class='form-group'>" +
            "<label class='control-label col-md-3 col-sm-3 col-xs-12'> 上传Excel </label>" +
            "<div class='col-md-6 col-sm-6 col-xs-12'>" +
            "<input type='file' name='excel_file'>" +
            "</div></div>" +
            "<div class='form-group'>" +
            "<div class='col-md-6 col-sm-6 col-xs-12 col-md-offset-3'>" +
            "<button type='submit' class='btn btn-success'>提交</button>" +
            "</div></div></form>"
        });
    }
    
    function addSingleTime() {
        window.location.href = '/admin.php/ClassTime/addSingleTime';
    }
</script>
