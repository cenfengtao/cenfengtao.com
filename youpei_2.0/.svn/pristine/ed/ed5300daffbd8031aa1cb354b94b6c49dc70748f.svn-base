.yp-content{
	margin-top:2.5rem; 
}
.yp-list {
    border: 1px solid #ddd;
    border-collapse: collapse;
    width: 100%;
}
.yp-list thead tr th {
    border-bottom: 1px solid #eeeeee;
    height: 40px;
    line-height: 40px;
    padding-left: 5px;
    text-align: left;
}
.yp-list tbody tr td {
    height: 2rem;
    line-height: 2rem;
    padding-left: 5px;
    text-align: left;
}
.yp-list tbody tr:nth-child(2n) {
    background: #fcfae1 none repeat scroll 0 0;
}
.yp-btn-query{
    height: 1.5rem;
    line-height: 1.5rem;
    font-size: 1rem;
    background: background: #2a6589;
    background: #2a6589;
    color: white;
    border: 1px solid #2a6589;
    padding: 0 0.3rem;
}

.layui-layer-title{
    font-size: 22px;
}
.layui-layer-btn a{
    font-size: 22px;
}

.layui-layer-dialog .layui-layer-content{
    font-size: 22px;
}