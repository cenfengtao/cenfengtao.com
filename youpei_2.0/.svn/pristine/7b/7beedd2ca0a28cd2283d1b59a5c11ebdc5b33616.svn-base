<!-- uEditor -->
<script src="__PUBLIC__/vendors/ueditor/ueditor.config.js"></script>
<script src="__PUBLIC__/vendors/ueditor/ueditor.all.min.js"></script>
<script src="__PUBLIC__/vendors/ueditor/lang/zh-cn/zh-cn.js"></script>
<!-- product -->
<script src="__PUBLIC__/js/admin/product.js"></script>
<script src="__PUBLIC__/js/admin/select2.full.js"></script>
<script>
    var ThinkPHP = window.Think = {
        "ROOT": "__ROOT__",
        "PUBLIC": "__PUBLIC__",
        "DOMAIN": "{:HTTPDomain()}"
    };

    $(function () {
        $('input[name="type"]').click(function () {
            if ($('input[name="type"]:checked').val() == 1) {
                $("#chooseArticle").show();
                $("#chooseProduct").hide();
                $("#super_url").hide();
            } else if($('input[name="type"]:checked').val() == 2){
                $("#chooseArticle").hide();
                $("#chooseProduct").show();
                $("#super_url").hide();
            } else {
                $("#chooseArticle").hide();
                $("#chooseProduct").hide();
                $("#super_url").show();
            }
        });

        var uploading = null;
        uploadFile({
            server: "{:U('Article/uploadPic')}",
            pick: '#filePicker',
            formData: {dir: 'adspic'},
            callback: function (result) {
                if (result.status == 1) {
                    layer.close(uploading);
                    var json = WST.toJson(result);
                    $('#preview').attr('src', ThinkPHP.DOMAIN + "/" + json.file.savepath + json.file.savethumbname);
                    $('#upload_image').val('/' + json.file.savepath + json.file.savename);
                    $('#preview').show();
                } else {
                    dialog.error(result.message);
                }
            },
            progress: function (rate) {
                uploading = WST.msg('正在上传图片，请稍后...');
            }
        });
    });
    var SCOPE = {
        'jump_url': '/admin.php/Poster/editPoster',
        'success_url': '/admin.php/Poster/index'
    };
    $(document).ready(function(){
        $('.form-control').select2();
        var location = getQueryString('location');
        $('input[name="location"]').val(location);
    });

    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]); return null;
    }
</script>
</body>
</html>
