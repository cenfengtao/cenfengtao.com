<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>添加广告</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                            <form id="demo-form2" data-parsley-validate
                                  class="form-horizontal form-label-left form-youpei">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">广告类型</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        文章: <input type="radio" class="icheckbox_flat-green" name="type"
                                                   value="1" {$poster['type'] == 1? 'checked="checked"':''}
                                                   checked=""/>
                                        课程: <input type="radio" class="icheckbox_flat-green" name="type"
                                                   value="2" {$poster['type'] == 2? 'checked="checked"':''}/>
                                        超链接: <input type="radio" class="icheckbox_flat-green" name="type"
                                                    value="3" {$poster['type'] == 3? 'checked="checked"':''}/>
                                    </div>
                                </div>
                                <div class="form-group" id="chooseArticle" style="{$poster['type'] == 1?'':'display:none'}">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">选择文章</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <select class="form-control" name="art_id">
                                            <foreach name="articleList" item="val">
                                                <option value="{$val['id']}" {$poster['type_id'] == $val['id']?"selected='selected'":''}>{$val['title']}</option>
                                            </foreach>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group" id="chooseProduct" style="{$poster['type'] == 2?'':'display:none'}">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">选择商品或课程</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <select class="form-control" name="pro_id">
                                            <foreach name="productList" item="val">
                                                <option value="{$val['id']}"  {$poster['type_id'] == $val['id']?"selected='selected'":''}>{$val['title']}</option>
                                            </foreach>
                                        </select>
                                    </div>
                                </div>
                                <div id="super_url" style="{$poster['type'] == 3?'':'display:none'}">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">请输入超链接</label>
                                        <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                            <input type="text" name="url" class="col-md-7 col-xs-12" value="{$poster['type_id']}">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">图片</label>
                                        <div class="col-md-3 col-sm-6 col-xs-12">
                                            <div id="filePicker" style='' class="btn_access" access_id="216">上传图片</div>
                                            <span style="">请勿上传超过500k的图片，课程尺寸：720*360</span>
                                            <input type="hidden" name="image" id="upload_image" tabindex="3"
                                                   autocomplete="off">
                                            <empty name="poster['image']">
                                                <img id='preview' src='' ref='' width='200' height='200' style='display:none'/>
                                                <else/>
                                                <img id='preview' width='200' height='200' src="{$poster['image']}"/>
                                            </empty>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="location">
                                <input type="hidden" name="id" value="{$poster['id']}">
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">重置</button>
                                        <button type="button" id="table-button-submit" class="btn btn-success">提交
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
