 .text{
        display: block;
        text-indent: 6.5rem;
        line-height: 2rem;
        word-wrap: break-word;
        text-align: left;
    }
    .image{
        position: absolute;
        font-size: 0.8rem;
    }
    .image span{
        line-height:2rem;
    }
    .replys{
        margin-left:3.1rem;
    }
    .image img{
        width: 1.8rem;
        height:1.8rem;
        vertical-align: middle;
    }
    .btn-comment{
        height: 2rem;
        line-height: 1.5rem;
        width: 37%;
        padding: 0 0.625rem;
        font-size: .875rem;
        color: #71ccb0;
        background-color: #fff;
        float: right;
        margin: -3.1rem 0rem 0.5rem 0rem;
        border-radius: .25rem;
        border: 1px solid #71ccb0;
    }
    .kap-mask{
        top:0;
    }
    .isCollect:before {
        color: #f56b85;
    }

    .isCollect {
        display: inline-block;
        width: 25%;
        margin-left: 5%;
        position: relative;
        color: #f56b85;
    }

    .follow {
        display: inline-block;
        width: 25%;
        margin-left: 5%;
        position: relative;
    }
    .article_banner {
        background: url("../../images/article-banner.png");
        display: block;
        width:100%;
        height:3rem;
        background-size: 100%;
    }