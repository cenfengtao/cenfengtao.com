<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>预约列表</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="col-sm-6"></div>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">创建时间</th>
                                        <th class="column-title">课程名称</th>
                                        <th class="column-title">机构</th>
                                        <th class="column-title">预约时间</th>
                                        <th class="column-title">宝宝名称</th>
                                        <th class="column-title">联系电话</th>
                                        <th class="column-title">微信昵称</th>
                                        <th class="column-title">状态</th>
                                        <th class="column-title no-link last"><span class="nobr">操作</span></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="bookList" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['pro_title']}</td>
                                            <td>{$val['org_name']}</td>
                                            <td>{$val['book_time']|date="Y-m-d",###}</td>
                                            <td>{$val['name']}</td>
                                            <td>{$val['mobile']}</td>
                                            <td>{$val['username']}</td>
                                            <td>{$val['status'] == 1?'待联系':($val['status'] == 2 ? '已联系': ($val['status'] == 3?'已失效':'已上课'))}</td>
                                            <td class="last">
                                                <in name="val['status']" value="1,2">
                                                    <a href="javascript:changeStatus({$val['id']})"
                                                       class="btn btn-success btn-xs btn_access" access_id="164">更改状态</a>
                                                </in>
                                            </td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                                <div class="pagination pagination-small">{$page}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
