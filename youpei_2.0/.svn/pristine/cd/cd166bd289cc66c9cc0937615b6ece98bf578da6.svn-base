<!-- self -->
<script>
    var SCOPE = {
        'delete_url': '{:U("Article/delete")}'
    };

    function changeStatus(id) {
        layer.open({
            type: 1,
            title: '审核状态',
            skin: 'layui-layer-rim',
            area: ['370px', '240px'], //宽高
            content: "<form style='margin-top:20px;' id='demo-form2' data-parsley-validate class='form-horizontal form-label-left form-youpei'><div class='form-group'>" +
            "<label class='control-label col-md-3 col-sm-3 col-xs-12'> 更改状态 </label>" +
            "<div class='col-md-6 col-sm-6 col-xs-12'>" +
            "<input type='hidden' name='id' value='" + id + "'>" +
            "已联系:<input type='radio' name='status' class='flat icheckbox_flat-green;' value='2' checked='checked'> &nbsp;" +
            "已上课:<input type='radio' name='status' class='flat icheckbox_flat-green;' value='4' >" +
            "</div></div>" +
            "<div class='form-group'>" +
            "<div class='col-md-6 col-sm-6 col-xs-12 col-md-offset-3'>" +
            "<button class='btn btn-primary' type='reset'>重置</button>" +
            "<button type='button'  class='btn btn-success' onclick='submitStatus()'>提交</button>" +
            "</div></div></form>"
        });
    }

    function submitStatus() {
        var url = "{:U('Book/changeStatus')}";
        var status = $("input[name='status']:checked").val();
        var id = $("input[name='id']").val();
        $.post(url, {id: id,status:status}, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, "{:U('Book/bookList')}");
            } else {
                return dialog.error(result.message);
            }
        }, 'json');
    }

</script>
