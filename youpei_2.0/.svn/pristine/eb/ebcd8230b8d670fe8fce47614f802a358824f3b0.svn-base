              $("ul").slideUp(1000)
            })
              var mySwiper = new Swiper('.swiper-container',{
                loop: true,
                direction: 'vertical',
              });
            // }
          
        }

    })
    
  setTimeout(function(){
    $(".type li").click(function(){
      $(".swiper-wrapper").html("")
      var typeId=$(this).attr("class");
