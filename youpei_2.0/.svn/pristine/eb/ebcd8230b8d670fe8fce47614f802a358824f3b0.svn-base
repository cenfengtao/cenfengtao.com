          type:"get",
          url:"/index.php/Organization/ajaxFullShot",
          async: true,
          dataType:"json",
          data:{
            class_id:typeId,
            id:id
          },
          success:function(data){
            var classity=data.data.class;
            var classLength=classity.length;
            var classImg=data.data.classContent;
            var classContentLength=classImg.length;
            $(".content").html(
                '<div class="swiper-container">'+
                  '<div class="swiper-wrapper">'+
                  '</div>'+
               ' </div>'
              )
            for(var s=0; s<classContentLength; s++){
              $(".swiper-wrapper").append(
                  '<div class="swiper-slide  all">'+
                    '<img src="'+classImg[s].image+'"/>'+
                    '<div class="desc">'+
                    '<p>'+classImg[s].description+'</p>'+
                    '</div>'+
                  '</div>'
                )
            }
             $("ul li").click(function(){
               $(".home span").html("&and;")
              $("ul").slideUp(1000)
            })
            var mySwipers = new Swiper('.swiper-container',{
              loop: true,
              direction: 'vertical',
            });
          }
      })
    })
  },1800)
})
</script>
