.advert{
    position: relative;
}
.explain{
    position: absolute;
    left: 0.1rem;
    bottom: 0.1rem;
    padding: 0.2rem 0.5rem;
    border-radius: 0.1rem;
    background: orange;
    color: white;
    font-size: 0.45rem;
}
.explainBox{
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.5);
    width: 100%;
    height: 100%;
    display: none;
    z-index: 1000000000;
}
.explainContent{
    border-radius: 0.1rem;
    position: absolute;
    /*top: 0;
    bottom: 0;*/
    left: 0;
    right: 0;
    /*height: 6.2rem;*/
    width:86%;
    margin: auto;
    background: white;
    margin-top: 2rem;
}
.explainContent >img{
    float: right;
    height: 0.47rem;
    width: 0.47rem;
    margin-top: 0.28rem;
    margin-right: 0.3rem;
}
.explainContent h3{
    text-align: center;
    font-size: 0.5rem;
    color: white;
    background: #386998;
    height: 1rem;
    line-height: 1rem;
    border-top-left-radius: 0.1rem;
    border-top-right-radius: 0.1rem;
}
.desc{
    padding: 0.2rem 0.2rem;
    overflow-y:scroll;
    height: 12.3rem;
}
.desc img{
    width: 100%;
    height: auto;
}
.explainContent p{
    color: #686868;
    width: 100%;
    margin: 0 auto;
    font-size: 0.4rem;
}
.worksList ul{
    width: 100%;
}
#content{position: relative;margin:0 auto;}
.box{width: 48%;float: left;}
.box img{width: 100%;height:auto;display: block;}
.left{float: left;margin-right: 4%;}
.right{float: right;}
.organization{
    background-color: white;
    overflow: hidden;
    margin-bottom: 0.15rem;
}
.organization div{
    overflow: hidden;
    float: left;
}
.organization span{
    float: left;
    font-size: 0.5rem;
    height: 1rem;
    line-height: 1rem;
    margin-left: 0.6rem;
}
.organization a{
    display: inline-block;
    float: left;
    height: 0.8rem;
    line-height: 1.1rem;
    font-size: 0.4rem;
    color: #065b9c;
}
.organization img{
    height: 0.8rem;
    width: auto;
    float: left;
    margin-top: 0.1rem;
    margin-left: 0.2rem;
}
.youpei{
    margin-right: 0.1rem;
}