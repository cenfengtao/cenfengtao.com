<!DOCTYPE html>
<!--headTrap<body></body><head></head><html></html>-->
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
        <title>优培圈</title>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/common.css"/>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/com.css"/>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/checkOrderInformation.css"/>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/pageloader.css"/>
        <!--<script src="js/jquery.min.js" type="text/javascript" charset="utf-8"></script>-->
        <script type="text/javascript">
            if(/msie/i.test(navigator.userAgent)){window.location.href="http://www.youpei-exc.com/"}
        </script>
        
    </head>
    <body class="kap-loading ty-view-all">
        <include file="Common:common"/>
        <header class="header">
            <a href="javascript:history.back()" class="back">
                <img src="/Public/images/back.png" alt="">
            </a>
            <h3>确认信息</h3>
            <a href="/index.php/Index/index.html" class="home" data-icon="Ņ"></a>
        </header>
        <article class="middle">
            <section class="img">
                <img src="{$group['image']}" alt="">
                <div class="text">{$group['title']}</div>
            </section>
            <!--<section class="schedule" onclick="getClassTable({$product['id']})">
                <img src="/Public/images/schedule.png" alt="">
                <span>预约试听课</span>
                <img src="/Public/images/next.png" alt="">
            </section>-->
            <!--<section class="schedule">
                <img src="/Public/images/chose.png" alt="">
                <span>选择规格</span>
            </section>
            <section>
                <div>
                    <foreach name="product.price" key='k' item='val'>
                        <a href="javascript:changeNormal({$k});" class="class-normal-child" id="normal-{$k}">{$val['class_normal']}</a>
                    </foreach>
                </div>
            </section>-->
            <section class="choseNum">
                <img src="../../../../Public/images/num.png" alt="">
                <span>选择数量</span>
                <span style="float:right;padding-right:0.5rem;">库存(<div id="count" style="display: inline;font-size: 0.5rem;">{$nowCount}</div>)</span>
            </section>
            <section class="course">
                <div class="num">
                    <div>
                        <a href="###" class="reduce" onclick="reduceProductN({$group['price']});">-</a>
                        <input type="number" value="1" min="1" max="{$nowCount}" id="amount" class="number" readonly="readonly">
                        <a href="###" class="add" onclick="addProductN({$group['price']});">+</a>
                    </div>
                </div>
            </section>
            <section class="pay">
                <p class="all">合计：<span class="price-off">￥{$group['price']}</span></p>
                <p class="really">实付：<strong class="price-full">￥{$group['price']}</strong></p>
                <p class="deduct">您当前的积分：{$integral}积分，可抵扣：{$integral/100}元。</p>
                <div class="rule" style="display: none;">
                    <input type="checkbox" id="checkbox" style="display: none;" checked="checked">
                    <i></i>
                    <label for="checkbox"> 我已阅读同意<a href="javascript:void(0);" style="color:#299955;" onclick="agreement()">《服务协议》</a>
                        及<a href="javascript:void(0);" style="color:#299955;" onclick="Refund_rule()">《退款规则》</a></label>
                </div>
            </section>
            <form action="">
                <label class="name">
                    <span>*联系人：</span>
                    <input type="text" placeholder="姓名" name="name">
                </label>
                <label class="tel">
                    <span>*电话号码：</span>
                    <input type="tel" placeholder="电话" maxlength="11" onchange="testTel(this.value)" name="mobile">
                </label>
                <label class="address">
                    <span>*所在地区：</span>
                    <select class="province" name="province">
                        <option value="请选择省">省份</option>
                    </select>
                    <select class="city" name="city">
                        <option value="请选择市">市</option>
                    </select>
                    <select class="county" name="county">
                        <option value="请选择区">县/区</option>
                    </select>
                </label>
                <label class="address">
                    <span>*详细地址：</span>
                    <input type="text" name="address">
                </label>
                <label class="details">
                    <span>留言：</span>
                    <textarea name="remark" id="remark"></textarea>
                </label>
            </form>
            <section class="nextStep">
                <a href="javascript:confirmOrder()">提交订单</a>
            </section>
        </article>
        <footer class="footer">
            <input type="hidden" name="class-key">
            <input type="hidden" name="class-now-price">
            <input type="hidden" name="coupon-ids">
        </footer>
        <script src="__PUBLIC__/Home/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
        <script src="/Public/js/layer/layer.js"></script>
        <script src="__PUBLIC__/Home/js/pageloader.js" type="text/javascript" charset="utf-8"></script>
        <script src="__PUBLIC__/js/home/rem.js" type="text/javascript" charset="utf-8"></script>
        <script src="__PUBLIC__/js/home/city.js" type="text/javascript" charset="utf-8"></script>
        <script src="__PUBLIC__/js/home/groups_checkOrderInformation.js" type="text/javascript" charset="utf-8"></script>
        <script src="/Public/js/layer/mobile/layer.js"></script>
        <script>
            $(function () {
                var now_price = "{$group['price']}";
                var amount = $("#amount").val();
                var totalPrice = now_price * amount;
                $('input[name="class-now-price"]').val(now_price);
                $('.price-off').text('￥' + totalPrice);
                $('.price-full').text('￥'+ totalPrice);
            });

        </script>
    </body>
</html>
