body,html{
	background-color: #f0f1f1;
}
.header {
	height: 1.2rem;
	line-height: 1.22rem;
	position: fixed;
	top: 0;
	width: 100%;
	background: white;
	overflow: hidden;
	z-index: 1000;
	clear: both;
}

.header .back {
	left: 0.27rem;
	position: absolute;
}

.header .back img {
	margin-top: 0.4rem;
	height: 0.5rem;
}

.header h3 {
	text-align: center;
	font-size: 0.6rem;
	color: #065b9c;
	margin-left: 0.3rem;
	margin-top: 0.05rem;
}

.header .home {
	right: 0.27rem;
	position: absolute;
	top: 0.15rem;
}

.header .home img {
	width: 1rem;
	height: 1rem;
}

/*中部开始*/
.middle{
	margin-top: 1.34rem;
}

/*轮播 start*/
    .banner {
        clear: both;
        height: 3.75rem;
        overflow: hidden;
        position: relative;
    }

    .banner .bd {
        height: 3.75rem;
        overflow: hidden;
    }

    .banner .bd ul {
        overflow: hidden;
    }

    .banner .bd li {
        height: 3.75rem;
        overflow: hidden;
        float: left;
        width: 100%;
    }

    .banner .bd li img {
        height: 3.75rem;
        width: 100%;
        display: block;
    }

    .banner .hd {
        position: absolute;
        bottom: 0.32rem;
        text-align: center;
        width: 100%;
    }

    .banner .hd ul {
        display: inline-block;
        *display: inline;
        *zoom: 1;
    }

    .banner .hd ul li {
        width: 0.24rem;
        height: 0.24rem;
        text-align: center;
        display: inline-block;
        line-height: 0.24rem;
        border-radius: 50%;
        background-color: #fff;
        color: white;
        cursor: pointer;
        margin: 0 0.19rem;
        vertical-align: middle
    }

    .banner .hd ul li.on {
        background: #db6066;
        font-weight: bold;
        color: white;;
    }


    /*课程*/
    .course .title{
    	height: 1.12rem;
    	line-height: 1.12rem;
    	background-color: white;
    	overflow: hidden;
    }
    .course .title img{
    	height: 0.72rem;
    	width: 0.75rem;
    	margin: 0.24rem 0.27rem 0 0.55rem;
    	float: left;
    }
    .course .title span{
    	float: left;
    	font-size: 0.48rem;
    	color: #386998;
    	margin-top: 0.08rem;
    	font-weight: bold;
    }
    .course .title a{
    	color: #757575;
    	font-size: 0.45rem;
    	float: right;
    	margin-right: 0.4rem;
    }


	.course .content{
		border-top: 0.02rem solid #f1f1f1;
	}
	.course .content ul li{
		background: white;
		margin-bottom: 0.15rem;
		height: 2.88rem;
	}
	.course .img{
		float: left;
		margin: 0.26rem 0 0 0.38rem;
	}
	.course .img a{
		position: relative;
		display: block;
	}
	.course .img img{
		height: 2.4rem;
		width: 3.1rem;
	}
	.course .img a span{
		position: absolute;
		top: 0;
		left: 0;
		display: block;
		height: 0.55rem;
		line-height: 0.55rem;
		text-align: center;
		font-size: 0.34rem;
		color: white;
		padding: 0 0.08rem;
		background: #f7b400;
	}
	.course .text{
		float: left;
		margin-left: 0.34rem;
	}
	.course .text h3{
		color: #386998;
		font-size: 0.6rem;
		margin-top: 0.39rem;
		line-height: 0.2295rem;
	}