<include file="Common:header"/>
<!-- iCheck -->
<link href="__PUBLIC__/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<link rel="stylesheet" href="__PUBLIC__/css/admin/main.css">
<!-- bootstrap-daterangepicker -->
<link href="__PUBLIC__/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>修改课程表</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                            <form id="demo-form2" data-parsley-validate
                                  class="form-horizontal form-label-left form-youpei">
                                <input type="hidden" name="id" value="{$classTime['id']}">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">开始日期
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                                            <input type="text" aria-describedby="inputSuccess2Status3"
                                                   name="start_day_time" value="{$classTime['start_day_time']|date='m/d/Y',###}"
                                                   id="single_cal3" class="form-control has-feedback-left" />
                                            <span class="fa fa-calendar-o form-control-feedback left"
                                                  aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">上课时间</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="time" style="height:2.7rem;" name="start_hour_time"
                                               value='{$classTime["start_hour_time"]}'> -
                                        <input type="time" style="height:2.7rem;" name="end_hour_time" value='{$classTime["end_hour_time"]}'>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">上课老师</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="teacher" class="form-control col-md-7 col-xs-12" value="{$classTime['teacher']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">课程名称</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="class_title" class="form-control col-md-7 col-xs-12" value="{$classTime['class_title']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">课时</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="class_hour" class="form-control col-md-7 col-xs-12" value="{$classTime['class_hour']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">手机</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="mobile" class="form-control col-md-7 col-xs-12" value="{$classTime['mobile']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">学生姓名</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="username" class="form-control col-md-7 col-xs-12" value="{$classTime['username']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">上课教室</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="classroom" class="form-control col-md-7 col-xs-12" value="{$classTime['classroom']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">上课人数</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="classroom_people" min="0" class="form-control col-md-7 col-xs-12" value="{$classTime['classroom_people']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">课室最大人数</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="classroom_max_people" min="0" class="form-control col-md-7 col-xs-12" value="{$classTime['classroom_max_people']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">类型</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="type" class="form-control col-md-7 col-xs-12" value="{$classTime['type']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">备注信息</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="remark" class="form-control col-md-7 col-xs-12" value="{$classTime['remark']}">
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">重置</button>
                                        <button type="button" id="table-button-submit" class="btn btn-success">提交
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<!-- iCheck -->
<script src="__PUBLIC__/vendors/iCheck/icheck.min.js"></script>
<!-- bootstrap-daterangepicker -->
<script src="__PUBLIC__/vendors/moment/min/moment.min.js"></script>
<script src="__PUBLIC__/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
<!-- self -->
<script src="__PUBLIC__/js/common.js"></script>
<script src="__PUBLIC__/js/plugins/plugins.js"></script>
<script>
    var SCOPE = {
        'jump_url': '{:U("ClassTime/editTime")}',
        'success_url': document.referrer
    };
</script>
</body>
</html>
