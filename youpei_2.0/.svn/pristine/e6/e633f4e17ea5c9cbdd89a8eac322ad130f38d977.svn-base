<include file="Common:header"/>
<link rel="stylesheet" href="__PUBLIC__/Home/css/style_v3.css">
<link rel="stylesheet" href="__PUBLIC__/Home/css/new.css">
<style>
    .empty {
        text-align: center;
        line-height: 3.5rem;
    }
</style>
<div id="page-user" title="搜索结果" class="kap-page kap-page-current">
    <div class="kap-top ty-menu-top">
        <div id="tools-msg" class="ty-tools ty-tools-inner ty-tools-current">
            <span class="title">搜索结果<span class="num"></span></span>
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn left btn-user" title="返回"
               data-icon="ɒ"></a>
            <a href="{:U('Index/index')}" class="btn right btn-user" title="返回首页" data-icon="Ņ"></a>
            <!--<a href="" class="saixuan"><img src="__PUBLIC__/images/saixuan.png" alt="">筛选</a>-->
        </div>
    </div>
    <div class="kap-wrap">
        <div id="page_hot" title="热推" class="kap-page kap-page-current"
             data-ty-tools="#tools_hot,#tools_idx,#side_common">
            <div class="ty-page">
                <div class="timeline-product" style="margin: 0 0 .625rem 0;">
                    <ul class="list-card-timeline">
                        <empty name="result">
                            <p style="margin-top: 3rem;text-align: center;">您所输入的搜索关键词没有找到任何信息哦！</p>
                            <else/>
                            <foreach name="result" item="val" key="k" offset="0" length="10">
                                <if condition="$val['search_type'] eq 1">
                                    <li class="item" data-ty-target="#detail_activity"
                                        onclick="getArticle({$val['id']})">
                                <span class="thumb"
                                      style="background-image:url({$val.image}); background-size:cover"></span>
                        <span class="desc">
                            <h3 class="title">{$val.title}</h3>
                            <span class="time"><span class="lef">{$val.time}</span></span>
                        </span>
                                        <span class="icon-sale"></span>
                                    </li>
                                    <elseif condition="($val['search_type'] eq 2) OR  ($val['search_type'] eq 3)"/>
                                    <li class="item" data-ty-target="#detail_activity"
                                        onclick="getProduct({$val['id']})">
                                <span class="thumb"
                                      style="background-image:url({$val.pic_url}); background-size:cover"></span>
                        <span class="desc">
                            <h3 class="title">{$val.title}</h3>
                            <span class="time"><span class="lef">{$val.time}</span></span>
                        </span>
                                        <span class="icon-sale"></span>
                                    </li>
                                    <elseif condition="$val['search_type'] eq 4"/>
                                    <li class="item" data-ty-target="#detail_activity"
                                        onclick="getOrganization({$val['id']})">
                                <span class="thumb"
                                      style="background-image:url({$val.picture}); background-size:cover;width: 4.3rem;"></span>
                        <span class="desc">
                            <h3 class="title">{$val.org_name}</h3>
                            <span class="time"><span class="lef">{$val.time}</span></span>
                        </span>
                                        <span class="icon-sale"></span>
                                    </li>
                                </if>
                            </foreach>
                        </empty>

                    </ul>
                    <ul class="list-card-timeline list">
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <include file="Common:menu"/>
</div>
<include file="Common:footer"/>
<script src="__PUBLIC__/js/home/searchResult.js" type="text/javascript" charset="utf-8"></script>
</body>
</html>