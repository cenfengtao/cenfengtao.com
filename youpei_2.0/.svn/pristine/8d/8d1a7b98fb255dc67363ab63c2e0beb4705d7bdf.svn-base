<include file="Common:header"/>
<!-- iCheck -->
<link href="__PUBLIC__/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<link rel="stylesheet" href="__PUBLIC__/css/admin/main.css">
<link rel="stylesheet" href="__PUBLIC__/js/webuploader/webuploader.css"/>
<style>
    .webuploader-pick {
        padding: 10px 20px;
    }
    #demo-form2 {
        float:left;
    }
</style>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>查看机构活动</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                            <form id="demo-form2" data-parsley-validate
                                  class="form-horizontal form-label-left form-youpei">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">标题 </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="title" readonly="readonly" class="form-control col-md-7 col-xs-12" value="{$activity['title']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">所属机构 </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="orn_name" readonly="readonly" class="form-control col-md-7 col-xs-12" value="{$orgName}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">报名开始时间
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                                            <input type="text" aria-describedby="inputSuccess2Status3" readonly="readonly"
                                                   name="start_time"
                                                   id="single_cal3"
                                                   value="{$activity['start_time']|date='m/d/Y',###}"
                                                   class="form-control has-feedback-left" required="required"/>
                                            <span class="fa fa-calendar-o form-control-feedback left"
                                                  aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">报名结束时间
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                                            <input type="text" aria-describedby="inputSuccess2Status3" readonly="readonly"
                                                   name="end_time"
                                                   id="single_cal1"
                                                   class="form-control has-feedback-left"
                                                   value="{$activity['end_time']|date='m/d/Y',###}"
                                                   required="required"/>
                                            <span class="fa fa-calendar-o form-control-feedback left"
                                                  aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">活动开始时间
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                                            <input type="text" aria-describedby="inputSuccess2Status3" readonly="readonly"
                                                   name="activity_time"
                                                   id="single_cal2"
                                                   class="form-control has-feedback-left"
                                                   value="{$activity['activity_time']|date='m/d/Y',###}"
                                                   required="required"/>
                                            <span class="fa fa-calendar-o form-control-feedback left"
                                                  aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">图片</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <empty name="activity['image']">
                                            <img id='preview' src='' ref='' width='200' height='200'
                                                 style='display:none'/>
                                            <else/>
                                            <img id='preview' ref='' width='200' height='200'
                                                 src="{$activity['image']}"/>
                                        </empty>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">最大参加人数</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="max_people" class="form-control col-md-7 col-xs-12" readonly="readonly"
                                               value="{$activity['max_people']}" min="0">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">现价</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="price" class="form-control col-md-7 col-xs-12" readonly="readonly"
                                               value="{$activity['price']}" min="0">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">活动标签</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="tag" class="form-control col-md-7 col-xs-12" readonly="readonly"
                                               value="{$activity['tag']}">
                                        <small>用空格隔开</small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">活动详情</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <textarea name="description" id="info">{$activity['description']}</textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">费用说明</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <textarea name="cost" id="infos">{$activity['cost']}</textarea>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<!-- iCheck -->
<script src="__PUBLIC__/vendors/iCheck/icheck.min.js"></script>
<!-- self -->
<script src="__PUBLIC__/js/common.js"></script>
<script src="__PUBLIC__/js/plugins/plugins.js"></script>
<script src="__PUBLIC__/js/upload.js"></script>
<script src="__PUBLIC__/js/webuploader/webuploader.js"></script>
<!-- uEditor -->
<script src="__PUBLIC__/vendors/ueditor/ueditor.config.js"></script>
<script src="__PUBLIC__/vendors/ueditor/ueditor.all.min.js"></script>
<script src="__PUBLIC__/vendors/ueditor/lang/zh-cn/zh-cn.js"></script>
<script type="text/javascript" charset="utf-8">
    window.UEDITOR_HOME_URL = "__PUBLIC__/vendors/ueditor/";
    $(document).ready(function () {
        UE.getEditor('info', {initialFrameWidth: 900, initialFrameHeight: 400, serverUrl: "__PUBLIC__/vendors/ueditor/php/controller.php"});
    });
    $(document).ready(function () {
        UE.getEditor('infos', {initialFrameWidth: 900, initialFrameHeight: 400, serverUrl: "__PUBLIC__/vendors/ueditor/php/controller.php"});
    });
</script>
</body>
</html>
