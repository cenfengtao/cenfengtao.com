<include file="Common:header"/>
<!-- iCheck -->
<link href="__PUBLIC__/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<link rel="stylesheet" href="__PUBLIC__/css/admin/main.css">
<link rel="stylesheet" href="__PUBLIC__/js/webuploader/webuploader.css"/>
<!-- bootstrap-daterangepicker -->
<link href="__PUBLIC__/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<style>
    .webuploader-pick {
        padding: 10px 20px;
    }

    #demo-form2 {
        float: left;
    }
</style>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>修改团购商品</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                            <form id="demo-form2" data-parsley-validate
                                  class="form-horizontal form-label-left form-youpei">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">名称 <span
                                            class="required">*</span></label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="title" class="form-control col-md-7 col-xs-12" value="{$product['title']}">
                                        <input type="hidden" name="id" value="{$product['id']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">分类</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <select class="form-control" name="class_id" required="required">
                                            <option value="0">请选择分类</option>
                                            <foreach name="class_list" item="val">
                                                <option value="{$val['id']}" {$product['class_id'] == $val['id'] ? "selected='selected'":''}>{$val['title']}</option>
                                            </foreach>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">图片</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <div id="filePicker" style=''>上传图片</div>
                                        <if condition="$type eq 1">
                                            <span style="">课程尺寸：720*360</span>
                                            <else/>
                                            <span style="">热销商品尺寸：230*230</span>
                                        </if>
                                        <input type="hidden" name="image" id="upload_image" tabindex="3"
                                               autocomplete="off">
                                        <empty name="product['image']">
                                            <img id='preview' src='' ref='' width='200' height='200'
                                                 style='display:none'/>
                                            <else/>
                                            <img id='preview' src='{$product["image"]}' ref='' width='200' height='200'/>
                                        </empty>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">原价</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="original_price" min="0"
                                               class="form-control col-md-7 col-xs-12" value="{$product['original_price']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">团购价</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="price" class="form-control col-md-7 col-xs-12"
                                               value="{$product['price']}" min="0">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">最少成团人数</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="min_people" min="1"
                                               class="form-control col-md-7 col-xs-12" value="{$product['min_people']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">最大限制人数</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="max_people" min="1"
                                               class="form-control col-md-7 col-xs-12" value="{$product['max_people']}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">单位</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="unit" value="{$product['unit']}" class="form-control col-md-7 col-xs-12">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">标签</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="tag" class="form-control col-md-7 col-xs-12"
                                               value="{$product['tag']}">
                                        <small>用空格隔开，最多三个</small>
                                    </div>
                                </div>
                                <foreach name="class_time" key="k" item="val">
                                    <div class="form-group class_time{$k}">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">{$k == 1?'上课时间':''}</label>
                                        <div class="col-md-2 col-sm-6 col-xs-12">
                                            <select class="form-control" name="class_time_day">
                                                <option value="周一" {$val['class_time_day'] == '周一'?"selected='selected'":''}>周一</option>
                                                <option value="周二" {$val['class_time_day'] == '周二'?"selected='selected'":''}>周二</option>
                                                <option value="周三" {$val['class_time_day'] == '周三'?"selected='selected'":''}>周三</option>
                                                <option value="周四" {$val['class_time_day'] == '周四'?"selected='selected'":''}>周四</option>
                                                <option value="周五" {$val['class_time_day'] == '周五'?"selected='selected'":''}>周五</option>
                                                <option value="周六" {$val['class_time_day'] == '周六'?"selected='selected'":''}>周六</option>
                                                <option value="周日" {$val['class_time_day'] == '周日'?"selected='selected'":''}>周日</option>
                                            </select>
                                        </div>
                                        <input type="time" style="height:2.7rem;" name="class_start_hour" value='{$val["class_start_hour"]}'> - <input type="time" style="height:2.7rem;" name="class_end_hour" value='{$val["class_end_hour"]}'> &nbsp;
                                        <if condition="($k eq $class_time_count) AND ($class_time_count gt 1)">
                                            <a class='btn btn-danger btn-xs' id='deleteTime{$k}' onclick='deleteTime({$k})'> 删除</a> &nbsp;
                                            <a class="btn btn-info btn-xs" id="addTime{$k}" onclick="addClassTime({$k})">添加</a>
                                            <elseif condition="($k eq $class_time_count) AND ($class_time_count eq 1)"/>
                                            <a class="btn btn-info btn-xs" id="addTime{$k}" onclick="addClassTime({$k})">添加</a>
                                            <else/>
                                            <a class='btn btn-danger btn-xs' id='deleteTime{$k}' onclick='deleteTime({$k})' style="display: none;"> 删除</a> &nbsp;
                                            <a class="btn btn-info btn-xs" id="addTime{$k}" onclick="addClassTime({$k})" style="display: none;">添加</a>
                                        </if>
                                    </div>
                                </foreach>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">商品简介</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <textarea name="description" id="info">{$product['description']}</textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">费用说明</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <textarea name="cost" id="infos">{$product['cost']}</textarea>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">重置</button>
                                        <button type="button" onclick="submitArray()" class="btn btn-success">提交
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<!-- iCheck -->
<script src="__PUBLIC__/vendors/iCheck/icheck.min.js"></script>
<!-- self -->
<script src="__PUBLIC__/js/common.js"></script>
<script src="__PUBLIC__/js/plugins/plugins.js"></script>
<script src="__PUBLIC__/js/upload.js"></script>
<script src="__PUBLIC__/js/webuploader/webuploader.js"></script>
<!-- bootstrap-daterangepicker -->
<script src="__PUBLIC__/vendors/moment/min/moment.min.js"></script>
<script src="__PUBLIC__/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
<!-- uEditor -->
<script src="__PUBLIC__/vendors/ueditor/ueditor.config.js"></script>
<script src="__PUBLIC__/vendors/ueditor/ueditor.all.min.js"></script>
<script src="__PUBLIC__/vendors/ueditor/lang/zh-cn/zh-cn.js"></script>
<script type="text/javascript" charset="utf-8">
    window.UEDITOR_HOME_URL = "__PUBLIC__/vendors/ueditor/";
    $(document).ready(function () {
        UE.getEditor('info', {
            initialFrameWidth: 900,
            initialFrameHeight: 400,
            serverUrl: "__PUBLIC__/vendors/ueditor/php/controller.php"
        });
        UE.getEditor('infos', {
            initialFrameWidth: 900,
            initialFrameHeight: 400,
            serverUrl: "__PUBLIC__/vendors/ueditor/php/controller.php"
        });
    });
</script>
<script>
    var SCOPE = {
        'jump_url': '{:U("Product/addGroupProduct")}',
        'success_url': '{:U("Product/groupProductList")}'
    };
    var ThinkPHP = window.Think = {
        "ROOT": "__ROOT__",
        "PUBLIC": "__PUBLIC__",
        "DOMAIN": "{:HTTPDomain()}"
    };

    $(function () {
        var uploading = null;
        uploadFile({
            server: "{:U('Article/uploadPic')}",
            pick: '#filePicker',
            formData: {dir: 'adspic'},
            callback: function (f) {
                layer.close(uploading);
                var json = WST.toJson(f);
                $('#preview').attr('src', ThinkPHP.DOMAIN + "/" + json.file.savepath + json.file.savethumbname);
                $('#upload_image').val('/' + json.file.savepath + json.file.savename);
                $('#preview').show();
            },
            progress: function (rate) {
                uploading = WST.msg('正在上传图片，请稍后...');
            }
        });
    });

    function chooseType(type) {
        window.location.href = "{:U('Product/addProduct')}?type=" + type;
    }

    function addClassTime(count) {
        var newCount = count + 1;
        if(newCount > 7){
            return dialog.error('不能超过7条时间');
        }
        $(".class_time"+count).after(
                "<div class='form-group class_time"+newCount+"'> " +
                "<label class='control-label col-md-3 col-sm-3 col-xs-12'></label>" +
                "<div class='col-md-2 col-sm-6 col-xs-12'>" +
                "<select class='form-control' name='class_time_day'>" +
                "<option value='周一'>周一</option>" +
                "<option value='周二'>周二</option>" +
                "<option value='周三'>周三</option>" +
                "<option value='周四'>周四</option>" +
                "<option value='周五'>周五</option>" +
                "<option value='周六'>周六</option>" +
                "<option value='周日'>周日</option>" +
                "</select>" +
                "</div>" +
                "<input type='time' style='height:2.7rem;' name='class_start_hour' value='00:00'> - " +
                "<input type='time' style='height:2.7rem;' name='class_end_hour' value='23:59'> " +
                "<a class='btn btn-danger btn-xs' id='deleteTime"+newCount+"' onclick='deleteTime(" + newCount + ")'> 删除</a>" +
                " &nbsp;<a class='btn btn-info btn-xs' id='addTime"+newCount+"' onclick='addClassTime(" + newCount + ")'>添加</a>" +
                "</div>"
        );
        $("#addTime"+count).hide();
        $("#deleteTime"+count).hide();
    }

    function deleteTime(count) {
        var lastCount = count - 1;
        $(".class_time"+count).remove();
        $("#addTime"+lastCount).show();
        if(lastCount == 1){
            return false;
        }
        $("#deleteTime"+lastCount).show();
    }

    function submitArray() {
        //获取上课时间
        var class_time = new Array();
        var add_time_length = $('select[name="class_time_day"] option:selected').length;
        for(var i = 0;i<=add_time_length;i++){
            class_time[i] = new Array();
            class_time[i][0] = $(".class_time"+i+" select[name='class_time_day'] option:selected").val();
            class_time[i][1] = $(".class_time"+i+" input[name='class_start_hour']").val();
            class_time[i][2] = $(".class_time"+i+" input[name='class_end_hour']").val();
        }
        var id = $('input[name="id"]').val();
        var title = $('input[name="title"]').val();
        var class_id = $('select[name="class_id"] option:selected').val();
        var image = $('input[name="image"]').val();
        var original_price = $('input[name="original_price"]').val();
        var price = $('input[name="price"]').val();
        var unit = $('input[name="unit"]').val();
        var tag = $('input[name="tag"]').val();
        var description = $('[name="description"]').val();
        var cost = $('[name="cost"]').val();
        var min_people = $('input[name="min_people"]').val();
        var max_people = $('input[name="max_people"]').val();
        var url = "{:U('Product/editGroupProduct')}";
        $.post(url,{id:id,class_time:class_time,class_id:class_id,title:title,image:image,original_price:original_price,price:price,
            unit:unit,tag:tag,description:description,cost:cost,min_people:min_people,max_people:max_people},function (result) {
            if(result.status == 1){
                return dialog.success(result.message,'{:U("Product/groupProductList")}');
            }else{
                return dialog.error(result.message);
            }
        },'json');
    }
</script>
</body>
</html>
