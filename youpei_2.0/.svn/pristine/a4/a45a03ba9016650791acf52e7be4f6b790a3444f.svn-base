<include file="Common:header"/>
<!-- iCheck -->
<link href="__PUBLIC__/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<link rel="stylesheet" href="__PUBLIC__/css/admin/main.css">
<link href="__PUBLIC__/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>红包发放管理</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <form id="myform" method="post" data-parsley-validate class="form-horizontal form-label-left form-youpei"  autocomplete="off">
                            <input type='hidden' id='id' class='form-control' value='{$object.id}'/>
                                
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">活动名称<span class="required">*</span>
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="title"  id="title" class="form-control col-md-7 col-xs-12" value="{$object.title}">
                                    </div>
                                </div>

                               <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">开始时间</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                                            <input type="text" aria-describedby="inputSuccess2Status3" name="start_time" id="single_cal3" class="form-control has-feedback-left" required="required" value="{$object['start_time']|date='m/d/Y',###}"/>

                                       <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">结束时间</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                                            <input type="text" aria-describedby="inputSuccess2Status3" name="end_time" id="single_cal1" class="form-control has-feedback-left" required="required" value="{$object['end_time']|date='m/d/Y',###}"/>
                                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>

                                 <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">排序
                                     <span class="required">*</span>
                                    </label>

                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="sort" name="sort" value="{$object.sort}" class="form-control col-md-7 col-xs-12" >
                                    </div>
                                </div>
                              <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">发放金额 
                                     <span class="required">*</span>
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="total_money" name="total_money" class="form-control col-md-7 col-xs-12" value="{$object.total_money}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">当前剩余金额  
                                     <span class="required">*</span>
                                    </label>

                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                     <input type="text" id="current_money" name="current_money" class="form-control col-md-7 col-xs-12" value="{$object.current_money}">
                                    </div>
                                </div>
                         
                         
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">状态<span class="required">*</span>
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                          不开启<input type="radio" class="form-control icheckbox_flat-green"  value="0" id="status" name="status" <if condition="$object['status'] == 0 ">checked</if>/>
                                          开启<input type="radio" id="status" class="form-control icheckbox_flat-green" name="status"  value="1"<if condition="$object['status'] == 1 ">checked</if>/>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">重置</button>
                                        <button type="submit" class="btn btn-success">提交</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<!-- iCheck -->
<script src="__PUBLIC__/vendors/iCheck/icheck.min.js"></script>
<script src="__PUBLIC__/js/common.js"></script>
<script src="__PUBLIC__/js/formValidator/formValidator-4.1.3.js"></script>
<script src="__PUBLIC__/js/plugins/plugins.js"></script>
<!-- bootstrap-daterangepicker -->
<script src="__PUBLIC__/vendors/moment/min/moment.min.js"></script>
<script src="__PUBLIC__/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
<!-- uEditor -->
<script src="__PUBLIC__/vendors/ueditor/ueditor.config.js"></script>
<script src="__PUBLIC__/vendors/ueditor/ueditor.all.min.js"></script>
<script src="__PUBLIC__/vendors/ueditor/lang/zh-cn/zh-cn.js"></script>
<!-- product -->
<script src="__PUBLIC__/js/admin/product.js"></script>
<script>
var ThinkPHP = window.Think = {
            "ROOT"   : "__ROOT__",
            "PUBLIC" : "__PUBLIC__",
            "DOMAIN" : "{:HTTPDomain()}"
   };

$( function () {
       $.formValidator.initConfig({
           theme:'Default',mode:'AutoTip',formID:"myform",debug:true,submitOnce:true,onSuccess:function(){
             add();
             return false;
            },onError:function(msg){
        }});
       
      $("#title").formValidator({onShow:"",onFocus:"请输入活动名称名",onCorrect:""}).inputValidator({min:1,max:20,onError:"活动名称名不能为空,请确认"});
      $("#sort").formValidator({ onShow: "", onFocus:"排序不能为空",onCorrect: "" }).regexValidator({ regExp: "num1", dataType: "enum", onError: "正数格式不正确" }); 
      $("#total_money").formValidator({ onShow: "",  onFocus:"请输入发放金额",onCorrect: "" }).regexValidator({ regExp: "num", dataType: "enum", onError: "金额格式不正确" });
      $("#current_money").formValidator({ onShow: "",  onFocus:"请输入当前剩余",onCorrect: "" }).regexValidator({ regExp: "num", dataType: "enum", onError: "金额格式不正确" });
  });
function add(){
   var params = WST.fillForm('.form-control');
    Plugins.waitTips({title:'信息提示',content:'正在提交数据，请稍后...'});
    $.post("{:U('RedPacketLimit/edit')}",params,function(data,textStatus){
    var json = WST.toJson(data);
      if(json.status=='1'){
        Plugins.setWaitTipsMsg({ content:'操作成功',timeout:1000,callback:function(){
            location.href='{:U("RedPacketLimit/index")}';
        }});
      }else{
       Plugins.closeWindow();
       Plugins.Tips({title:'信息提示',icon:'error',content:json.msg||'操作失败',timeout:1000});
      }
    });
   
}

   
</script>
</body>
</html>
