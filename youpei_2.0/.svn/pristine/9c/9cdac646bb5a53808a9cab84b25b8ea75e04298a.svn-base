<!-- self -->
<script>
    function changeStatus(id,voteId) {
        layer.open({
            type: 1,
            title: '入围结果',
            skin: 'layui-layer-rim',
            area: ['370px', '240px'], //宽高
            content: "<form style='margin-top:20px;' id='demo-form2' data-parsley-validate class='form-horizontal form-label-left form-youpei'><div class='form-group'>" +
            "<label class='control-label col-md-3 col-sm-3 col-xs-12'> 入围结果 </label>" +
            "<div class='col-md-6 col-sm-6 col-xs-12'>" +
            "<input type='hidden' name='id' value='" + id + "'>" +
            "<input type='hidden' name='voteId' value='" + voteId + "'>" +
            "入围:<input type='radio' name='status' class='flat icheckbox_flat-green;' value='2' checked='checked' onclick='hiddenMsg()'>" +
            "落选:<input type='radio' name='status' class='flat icheckbox_flat-green;' value='3' onclick='showMsg()'>" +
            "</div></div>" +
            "<div class='form-group' id='lose_reason' style='display: none;'>" +
            "<label class='control-label col-md-3 col-sm-3 col-xs-12'> 落选原因 </label>" +
            "<div class='col-md-6 col-sm-6 col-xs-12'>" +
            "<textarea style='width:220px;height:50px;resize:none;' id='lose_reason_content'></textarea>" +
            "</div></div>" +
            "<div class='form-group'>" +
            "<div class='col-md-6 col-sm-6 col-xs-12 col-md-offset-3'>" +
            "<button class='btn btn-primary' type='reset'>重置</button>" +
            "<button type='button'  class='btn btn-success' onclick='submitStatus()'>提交</button>" +
            "</div></div></form>"
        });
    }
    function submitStatus() {
        var url = "{:U('Vote/submitContributionStatus')}";
        var status = $("input[name='status']:checked").val();
        var id = $("input[name='id']").val();
        var lose_reason = $("#lose_reason_content").val();
        var voteId = $("input[name='voteId']").val();
        $.post(url, {status: status, id: id, lose_reason: lose_reason}, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, "{:U('Vote/getContribution')}?id="+voteId);
            } else {
                return dialog.error(result.message);
            }
        }, 'json');
    }
    function showMsg() {
        $("#lose_reason").show();
    }

    function hiddenMsg() {
        $("#lose_reason").hide();
        $("#lose_reason_content").val('');
    }

    function showContributionResult(contribution_id,voteId) {
        layer.open({
            type: 0,
            title: '确认信息',
            btn: ['确认', '取消'],
            icon: 3,
            closeBtn: 2,
            content: '确认发送投稿结果？发送后无法撤回',
            yes: function () {
                var url = "/admin.php/Vote/showContributionResult";
                $.get(url,{contribution_id:contribution_id},function (result) {
                    if(result.status == 0){
                        dialog.error(result.message);
                    }else{
                        dialog.success(result.message, "/admin.php/Vote/getContribution?id="+voteId);
                    }
                },'json');
            }
        });
    }
    function showContribution(id) {
        var url = "/admin.php/Vote/showContribution";
        $.get(url,{id:id},function (result) {
            if(result.status == 0){
                return dialog.error(result.message);
            }
            if (result.data.type==1){
                layer.open({
                    type: 1,
                    title: '查看作品',
                    skin: 'layui-layer-rim',
                    area: ['650px', '750px'], //宽高
                    content: "<div><img src='"+result.data.path+"' style='width:100%;'></div>"
                })
            }
            if(result.data.type == 2){
                layer.open({
                    type: 1,
                    title: '查看作品',
                    skin: 'layui-layer-rim',
                    area: ['850px', '650px'], //宽高
                    content: "<div>"+
                    '<video id="example_video_1" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="none" style="width:800px;height:600px;" poster="/Public/images/logo.jpg">'+
                    "<source src='"+result.data.path+"' type='video/mp4'/>"+
                    "</video>"+
                    "</div>"
                })
            }
        },'json')
    }
</script>
</body>
