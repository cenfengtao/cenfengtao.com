        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>投稿列表</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                <div id="myTabContent" class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                         aria-labelledby="home-tab">
                                        <div class="table-responsive">
                                            <table id="datatable"
                                                   class="table table-striped jambo_table table-bordered">
                                                <thead>
                                                <tr class="headings">
                                                    <th class="column-title">投稿时间</th>
                                                    <th class="column-title">类型</th>
                                                    <th class="column-title">投稿人</th>
                                                    <th class="column-title">联系电话</th>
                                                    <th class="column-title">昵称</th>
                                                    <th class="column-title">状态</th>
                                                    <th class="column-title">落选原因</th>
                                                    <th class="column-title no-link last"><span class="nobr">操作</span>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <foreach name="list" item="val">
                                                    <tr class="even pointer">
                                                        <td>{$val['create_time'] | date="Y-m-d", ###}</td>
                                                        <td>{$val['type'] == 1 ? '图片': '视频'}</td>
                                                        <td>{$val['username']}</td>
                                                        <td>{$val['mobile']}</td>
                                                        <td>{$val['nickname']}</td>
                                                        <td>{$val['status']==1?'审核中':($val['status']==2?'入围':'落选')}</td>
                                                        <td>{$val['lose_reason']}</td>
                                                        <td class="last">
                                                            <a href="javascript:showContribution({$val['id']})" class="btn btn-info btn-xs btn_access" access_id="181">查看作品</a>
                                                            <if condition="$val['template_status'] eq 1">
                                                                <a href="javascript:changeStatus({$val['id']},{$val['vote_id']})" class="btn btn-primary btn-xs btn_access" access_id="179">结果</a>
                                                                <a href="javascript:showContributionResult({$val['id']},{$val['vote_id']})" class="btn btn-success btn-xs btn_access" access_id="180">发送结果</a>
                                                            </if>
                                                        </td>
                                                    </tr>
                                                </foreach>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
