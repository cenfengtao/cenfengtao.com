<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>文章列表</h2>
                            <a href="{:U('Article/addBoonArticle')}" class="btn btn-success add_button btn_access" access_id="82">添加福利精品文章</a>
                            <div class="clearfix"></div>
                        </div>
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" access_id="16" class="btn_access"><a href="{:U('Article/artList')}">文章列表</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="282"><a href="{:U('Article/activityList')}">活动文章</a>
                            </li>
                            <li role="presentation" access_id="75" class="btn_access"><a href="{:U('Article/rearHotList')}">育儿精品文章</a>
                            </li>
                            <li role="presentation" access_id="76" class="active btn_access"><a href="{:U('Article/boonHotList')}">福利精品文章</a>
                            </li>
                        </ul>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">创建时间</th>
                                        <th class="column-title">标题</th>
                                        <th class="column-title">机构</th>
                                        <th class="column-title">图片</th>
                                        <th class="column-title">分类</th>
                                        <th class="column-title">阅读量</th>
                                        <th class="column-title">排序</th>
                                        <th class="column-title no-link last"><span class="nobr">操作</span></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="artList" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['title']}</td>
                                            <td>{$val['org_name']}</td>
                                            <td><img src="{$val['image']}" style="width:60px;height:40px" alt=""></td>
                                            <td>{$val['cate_id']}</td>
                                            <td>{$val['read_count']}</td>
                                            <td>{$val['sort']}</td>
                                            <td class="last">
                                                <a href="javascript:void(0)" class="cancel_hot btn btn-danger btn-xs btn_access" access_id="83" attr_message="确认取消该精选课程？" attr_id="{$val['id']}">取消</a>
                                                <a href="{:U('Article/editBoonArticle',array('id'=>$val['id']))}" class="btn btn-info btn-xs btn_access" access_id="84">修改</a>
                                            </td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
