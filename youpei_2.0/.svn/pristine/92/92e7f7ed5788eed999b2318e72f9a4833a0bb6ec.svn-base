<!-- self -->
<script>
    var SCOPE = {
        'delete_url': '{:U("Article/delete")}'
    };
    $('.cancel_hot').click(function () {
        var id = $(this).attr('attr_id');
        var message = $(this).attr('attr_message');
        var url = "{:U('Article/cancelHot')}";
        layer.open({
            type: 0,
            title: '确认信息',
            btn: ['确认', '取消'],
            icon: 3,
            closeBtn: 2,
            content: message,
            yes: function () {
                cancelHot(url, {'id': id});
            }
        });
    });
    function cancelHot(url, data) {
        $.post(url, data, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, '');
            } else {
                return dialog.error(result.message);
            }
        }, 'JSON');
    }
</script>
