.footer ul li a img{
	margin-top: 0.52rem;
}
.footer ul li a span{
	margin-left: 0.14rem;
}
body,html{
	background: #f1f1f1;
}
.middle{
	padding-top: 1.2rem;
	padding-bottom: 1.6rem;
}



.countdown{
	height: 1.98rem;
	background: #386998;
	margin: 0.12rem 0 0.15rem;
}

.countdown h3{
	font-weight: normal;
	color: white;
	text-align: center;
	font-size: 0.48rem;
	line-height: 1rem;
}
.time{
	color: white;
	font-size: 0.48rem;
	padding-left: 1.24rem;
}
.time span{
	color: #386998;
	font-size: 0.48rem;
	width: 0.99rem;
	text-align: center;
	height: 0.63rem;
	line-height: 0.63rem;
	background: white;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	margin: 0 0.24rem 0 0.36rem;
	display: inline-block;
}


.chart{
	overflow: hidden;
}
.chart ul li{
	height: 3rem;
	background: white;
	margin-bottom: 0.28rem;

}
.chart .img{
	float: left;
	margin-left: 0.4rem;
	margin-top: 0.53rem;
	position: relative;
	margin-right: 0.32rem;
}
.img .hat{
	width: 1.79rem;
	height: 0.87rem;
	display: none;
}
.img .head{
	width: 2.07rem;
	height: 2.07rem;
	border-radius: 50%;
	-webkit-border-radius:50%;
	border: 0.03rem solid #ee604b;
}
.chart .text{
	float: left;
}
.text p{
	font-size: 0.42rem;
	line-height: 0.72rem;
}
.text p:first-child{
	margin-top: 0.45rem;
}
.text p i{
	height: 0.23rem;
	width: 0.23rem;
	border-radius: 50%;
	-webkit-border-radius:50%;
	background: #4c4c4c;
	display: block;
	float: left;
	margin-top: 0.25rem;
	margin-right: 0.2rem;
}
.text p span{
	color: #386998;
	font-size: 0.42rem;
}

.chart .order{
	float: right;
	position: relative;
	margin-right: 0.3rem;
	margin-top: 0.35rem;
}
.chart .order img{
	height: 2.28rem;
	width: 1.8rem;
}
.chart .order span{
    position: absolute;
    font-size: 0.48rem;
    color: white;
    top: 0;
    /* left: 0.65rem; */
    width: 2.8rem;
    left: -0.05rem;
    text-align: center;
    line-height: 2.6rem;
    height: 2.41rem;
}

.chart li:first-child .img{
	float: left;
	margin-left: 0.56rem;
	margin-top: 0.77rem;
}
.chart li:first-child .img .hat{
	position: absolute;
	top: -0.7rem;
	left: 0.15rem;
}
.chart li:nth-child(2) .img{
	float: left;
	margin-left: 0.569rem;
	margin-top: 0.77rem;
}
.chart li:nth-child(2) .img .hat{
	position: absolute;
	top: -0.7rem;
	left: 0.15rem;
}
.chart li:nth-child(3) .img{
	float: left;
	margin-left: 0.56rem;
	margin-top: 0.77rem;
}
.chart li:nth-child(3) .img .hat{
	position: absolute;
	top: -0.7rem;
	left: 0.15rem;
}
/*弹框*/
.tellBox{
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.5);
    width: 100%;
    height: 100%;
    display: block;
    z-index: 1000000000;
}
 .tellContent{
    border-radius: 0.1rem;
    /*position: absolute;*/
    /*top: 0;*/
    /*bottom: 0;*/
    left: 0;
    right: 0;
    /*height: 50%;*/
    width:80%;
    margin: auto;
    background: white;
}

.tellContent h3{
    text-align: center;
    font-size: 0.5rem;
    color: white;
    background: #386998;
    height: 1rem;
    line-height: 1rem;
    border-top-left-radius: 0.1rem;
    border-top-right-radius: 0.1rem;
}
.tellContent p{
    font-size: 0.4rem;
    padding: 0 0.5rem;
    text-indent: 2em;
}
.tellContent p:first-child{
    margin-top: 0.5rem;
}
.tellContent .closeBtn{
    float: right;
    height: 0.47rem;
    width: 0.47rem;
    margin-top: 0.28rem;
    margin-right: 0.3rem;
    position: absolute;
    right: 0;
}
.tellContent h4{
	text-align: center;
    font-size: 0.5rem;
    color: #386998;
    height: 1rem;
    line-height: 1rem;
}
.tellContent .prizeImg{
	width: 6rem;
	margin: 0 auto;
	padding: 0.5rem 0;
}
