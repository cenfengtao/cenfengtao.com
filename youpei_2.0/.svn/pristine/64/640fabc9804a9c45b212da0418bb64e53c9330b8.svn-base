.user-area {
    margin-top: 3rem;
}

.auto-create, .hope-order {
    text-align: center;
}

.hope-order {
    display: none;
}

.tab-nav > a {
    display: inline-block;
    width: 49%;
    height: 1.5rem;
    text-align: center;
    color: #777777;
}

.tab-nav > .active {
    border-bottom: 5px solid #46739f;
    color: #46739f;
}

.auto-create .group-left, .hope-order .group-left {
    display: inline-block;
    width: 35%;
    line-height: 4.5rem;
}

.auto-create .group-right, .hope-order .group-right {
    display: inline-block;
    width: 63%;
    text-align: left;
}

.auto-create > ul > li, .hope-order > ul > li {
    color: #46739f;
}

.auto-create > ul > li > hr, .hope-order > ul > li > hr {
    margin: 0 auto;
    width: 90%;
}

select[name="group_id"], select[name='org_token'] {
    width: 80%;
    height: 1.5rem;
    font-size: 1rem;
    border: 3px solid #386998;
    border-radius: 8px;
}

.class-time .classTime li {
    height: 2rem;
    line-height: 2rem;
}

.launch-group, .submit-hope {
    width: 100%;
    height: 13rem;
    background: #f0f1f1;
}

.launch-group .button-launch, .submit-hope .button-submit {
    width: 76%;
    line-height: 3rem;
    margin-top: 2rem;
    font-size: 1.5rem;
    font-weight: bold;
    color: #fff;
    background: #db6066;
    border-radius: 15px;
}

#hope-content {
    resize: none;
    margin-top: 1rem;
    width: 90%;
    height: 8rem;
    border: 2px solid #386998;
    border-radius: 8px;
    font-size: 0.9rem;
}

select[name='class_time_day'] {
    width: 23%;
    height: 1.5rem;
    font-size: 1rem;
    border: 2px solid #386998;
}

select[name='class_time_day'] option {
    font-size: 0.5rem;
}

input[name='class_start_hour'], input[name='class_end_hour'] {
    width: 31%;
    height: 1.5rem;
    border: 2px solid #386998;
    font-size: 0.7rem;
}

input[name='mobile'] {
    width: 90%;
    height: 1.5rem;
    border: 2px solid #386998;
    font-size: 1rem;
}

.hint {
    font-size: 0.9rem;
    margin-top: 1rem;
    color: #717171;
}

.want{
    width: 100%;
    height: 340px;
    margin-bottom:3.125rem;
}
.launch-group, .submit-hope{
    height: 10rem!important;
}