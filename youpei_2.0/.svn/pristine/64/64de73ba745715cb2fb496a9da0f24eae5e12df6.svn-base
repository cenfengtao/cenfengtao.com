<include file="Common:header"/>
<!-- iCheck -->
<link href="__PUBLIC__/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<link rel="stylesheet" href="__PUBLIC__/css/admin/main.css">
<link rel="stylesheet" href="__PUBLIC__/js/webuploader/webuploader.css" />

<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>上传个人中心头像背景图</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                              <form id="myform" method="post" data-parsley-validate class="form-horizontal form-label-left form-youpei"  autocomplete="off">
                              <input type='hidden' id='id' class='form-control' value='{$object.id}'/>
                              <input type='hidden' id='token' class='form-control' value='{$object.token}'/>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">上传背景图<span class="required">*</span>
                                    </label>
                                    <div class="cropper-drag-box cropper-modal cropper-crop">
                                       <div id="filePicker" style='' class="btn_access" access_id="203">上传图片</div>
                                        <div style=''>建议图片大小:<span id='img_size'></span> (310*160px)，格式为 gif, jpg, jpeg, png</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">预览图 <span class="required">*</span>
                                    </label>
                                   <if condition="$object['image'] !='' ">
                                    <img height="160" width='310' id='preview' src='__ROOT__/{$object.image}'>
                                     <else/>
                                    <img id='preview' src='' ref='' width='310' height='160' style='display:none'/> 
                                    </if>
                                   <input id="adFile" name="adFile" class="text wstipt form-control" tabindex="3" autocomplete="off" style="" type="hidden" value="{$object.image}"/>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"> 是否显示  <span
                                            class="required">*</span>
                                    </label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 form_radio">
                                         显示<input type="radio" class="form-control icheckbox_flat-green"  value="0" id="is_show" name="is_show" <if condition="$object['is_show'] == 0 ">checked</if>/>
                                         隐藏<input type="radio" id="is_show" class="form-control icheckbox_flat-green" name="is_show"  value="1"<if condition="$object['is_show'] == 1 ">checked</if>/>
                                    </div>
                                </div>
                               
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary btn_access" access_id="213" onClick="del()"  type="reset">删除背景图</button>
                                        <button type="submit" class="btn btn-success btn_access" access_id="212">提交
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<!-- iCheck -->
<script src="__PUBLIC__/vendors/iCheck/icheck.min.js"></script>
<script src="__PUBLIC__/js/common.js"></script>
<script src="__PUBLIC__/js/formValidator/formValidator-4.1.3.js"></script>
<script src="__PUBLIC__/js/plugins/plugins.js"></script>
<script src="__PUBLIC__/js/upload.js"></script>
<script src="__PUBLIC__/js/webuploader/webuploader.js"></script>
<script>
var ThinkPHP = window.Think = {
            "ROOT"   : "__ROOT__",
            "PUBLIC" : "__PUBLIC__",
            "DOMAIN" : "{:HTTPDomain()}"
   };

$(  function () {
       $.formValidator.initConfig({
           theme:'Default',mode:'AutoTip',formID:"myform",debug:true,submitOnce:true,onSuccess:function(){
                   add();
                   return false;
            },onError:function(msg){
        }});
        $("#adFile").formValidator({ // 验证：模块名称
            onshow: "",
            onfocus: "请上传图片",
            oncorrect: ""
        }).inputValidator({
            min: 1,
            max: 100,
            onerrormin: "（错误）不能为空",
            onerrormax: "（错误）",
            onError: "请上传图片" 
        });
      
var uploading = null;
     uploadFile({
          server:"{:U('Personalbackground/uploadPic')}",
          pick:'#filePicker',
          formData: {dir:'adspic'},
          callback:function(result){
              if (result.status == 1) {
                  layer.close(uploading);
                  var json = WST.toJson(result);
                  $('#preview').attr('src', ThinkPHP.DOMAIN + "/" + json.file.savepath + json.file.savethumbname);
                  $('#upload_image').val(json.file.savepath + json.file.savename);
                  $('#preview').show();
              } else {
                  dialog.error(result.message);
              }
          },
          progress:function(rate){
            uploading = WST.msg('正在上传图片，请稍后...');
          }
      });
});
function add(){
   var params = WST.fillForm('.form-control');
  if(params.adFile==''){
       Plugins.Tips({title:'信息提示',icon:'error',content:'请上传广告图片!',timeout:1000});
       return;
     }
    Plugins.waitTips({title:'信息提示',content:'正在提交数据，请稍后...'});
    $.post("{:U('Personalbackground/edit')}",params,function(data,textStatus){
    var json = WST.toJson(data);
      if(json.status=='1'){
        Plugins.setWaitTipsMsg({ content:'操作成功',timeout:1000,callback:function(){
            location.href='{:U("Personalbackground/index")}';
        }});
      }else{
        Plugins.closeWindow();
        Plugins.Tips({title:'信息提示',icon:'error',content:'操作失败!',timeout:1000});
      }
    });
   
}

function del(){
	var params = WST.fillForm('.form-control');
	if (params.id=='') {
		 Plugins.Tips({title:'信息提示',icon:'error',content:'未上传广告图片!',timeout:1000});
       return;
	}
	 if(params.adFile==''){
       Plugins.Tips({title:'信息提示',icon:'error',content:'请上传广告图片!',timeout:1000});
       return;
     }
	  Plugins.waitTips({title:'信息提示',content:'正在提交数据，请稍后...'});
	  $.post("{:U('Personalbackground/del')}",params,function(data,textStatus){
    var json = WST.toJson(data);
      if(json.status=='1'){
        Plugins.setWaitTipsMsg({ content:'操作成功',timeout:1000,callback:function(){
            location.href='{:U("Personalbackground/index")}';
        }});
      }else{
        Plugins.closeWindow();
        Plugins.Tips({title:'信息提示',icon:'error',content:'操作失败!',timeout:1000});
      }
    });
}
</script>
</body>
</html>
