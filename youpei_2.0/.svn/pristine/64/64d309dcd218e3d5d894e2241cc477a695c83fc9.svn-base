<!-- self -->
<script>
    var SCOPE = {
        'delete_url': '{:U("Product/deleteGroupProduct")}'
    };
    $('.cancel_rush').click(function () {
        var id = $(this).attr('attr_id');
        var message = $(this).attr('attr_message');
        var url = "{:U('Product/cancelRush')}";
        layer.open({
            type: 0,
            title: '确认信息',
            btn: ['确认', '取消'],
            icon: 3,
            closeBtn: 2,
            content: message,
            yes: function () {
                cancelRush(url, {'id': id});
            }
        });
    });
    function cancelRush(url, data) {
        $.post(url, data, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, '');
            } else {
                return dialog.error(result.message);
            }
        }, 'JSON');
    }
    function regainCheck(id) {
        var url = "{:U('Check/regainCheckGroup')}";
        $.post(url, {id: id}, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, "{:U('Product/groupProductList')}");
            } else {
                return dialog.error(result.message);
            }
        }, 'json');
    }
</script>
