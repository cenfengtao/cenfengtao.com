body,html{
	background: #f1f1f1;
}
.img{
	position: relative;
	margin-top: 1.2rem;
}
.img img{
	width: 100%;
	height: 100%;
}
.first{
	display: block;
	width: 1rem;
	height: 1rem;
	position: absolute;
	left: 0.95rem;
	bottom: 1.1rem;
	background: red;
	border-radius: 50%;
	-webkit-border-radius:50%;
}
