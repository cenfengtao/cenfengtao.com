}


.box{
	height: 100%;
	width: 100%;
	position: fixed;
	z-index: 1000;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.5);
}
.box .content{
	height: 10rem;
	width: 10rem;
	background: white;
	margin: auto;
	bottom: 0;
	top: 0;
	left: 0;
	right: 0;
	position: absolute;
	z-index: 2000;
}