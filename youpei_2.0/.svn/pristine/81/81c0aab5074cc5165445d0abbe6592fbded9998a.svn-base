body,html{
	background: #f1f1f1;
}
.img{
	position: relative;
	margin-top: 1.2rem;
}
.img img:first-child{
	width: 100%;
	height: 100%;
}
.cicle{
	display: block;
	width: 3.8rem;
	height: 3.8rem;
	position: absolute;
	left: 3.9rem;
	bottom: 1rem;
	border-radius: 50%;
	-webkit-border-radius:50%;
}

.step{
	width: 80%;
	margin: 0.5rem auto 0.5rem;
	padding-bottom: 0.5rem;
}
.step p{
	color: orange;
	font-weight: bold;
	font-size: 0.45rem;
}
.step p:first-child{
	font-size: 0.55rem;
}