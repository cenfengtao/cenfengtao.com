*{
            margin: 0;
            padding: 0;
        }
        html,body{
            overflow-y:scroll; 
        }
        
		.header{
			height: 35px;
			line-height: 35px;
/*			position: fixed;
			z-index: 10000;
			top: 0;*/
			width: 100%;
			background:white;
		}
		.header a{
			color: #065b9c;
			left: 10px;
			font-size: 20px;
			position: absolute;
			font-family: "宋体";
			font-weight: bold;
			text-decoration: none;	
		}
		.header a img{
			height: 20px;
			margin-top: 8px;
		}
		.header h3{
			text-align: center;
			font-size: 20px;
			color: #065b9c;
		}
		/*头部 end*/
		article{
			/*margin-top: 35px;*/
		}
 		.img{
            width: 100%;
        }
        .img img{
            width: 100%;
            height: auto;
        }
        .copy{
            position: fixed;
            top: 0;
            /*bottom:0;*/
            height: 100%;
            width: 100%;
            z-index: 10000;
            background: rgba(0,0,0,0.5);
        }
        .radio{
            font-size: 16px;
            color: white;
            border: none;
            width: 100%;
            height: 35px;
            line-height: 35px;
            border-radius: none;
            display: flex;
            justify-content: space-around;
            margin-top: 10px;
            
        }
        .radio li{  
            background: gray;
            width: 48%;
            color: white;
            text-align: center;
        }
        .radio li a{
            text-decoration: none;
            color: white;
        }
        img{
            display: block;
            border:none;
        }
        .content{
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            /*height: 300px;*/
            margin: auto;
            width: 80%;
            background: white;
        }
        .copy ul{
            /*height: 270px;*/
            border-top: 1px solid gray;
        }
        .copy ul li{
            position: relative;
            /*padding-top: 20px;*/
            height: 90px;
            line-height: 90px;
            width: 100%;
            padding-left: 10px;
            border-bottom: 1px solid gray;
        }
        .copy ul li span{
            font-size: 14px;
        }
        .pic{
            position: relative;
        }
        .pic span{
            float: left;
        }
        .pic div{
            float: left;
            height: 80px;
            width: 80px;
            border: 1px solid gray;
            margin-top: 5px;
        }
        .pic div img{
            height: 80px;
            width: 80px;
            border: 1px solid gray;
        }
        #close{
            position: absolute;
            right: 30px;
            bottom: 5px;
            font-size: 14px;
            text-decoration: none;
            color: white;
            background: #57ade3;
            line-height: 30px;
            padding: 2px 5px;
            margin-left: 10px;
            border-radius: 6px;
            margin-top: 30px;
        }
        #fileChooseButton{
            position: absolute;
            right: 30px;
            top: -24px;
            font-size: 14px;
            text-decoration: none;
            color: white;
            background: #57ade3;
            line-height: 30px;
            padding: 2px 5px;
            margin-left: 10px;
            border-radius: 6px;
            margin-top: 30px;
        }
        .text{
            height: 30px;
            background: #6d5b5b;
            padding-top: 2px;
            position: relative;
        }
        .text p{
            height: 30px;
            line-height: 30px;
            font-size: 14px;
            text-align: center;
            position: relative;
            color: white;
        }
        .content ul li input{
            font-size: 13px;
            height: 25px;
            padding: 5px 5px;
            width: 180px;
            resize: none;
            outline: none;
            border:none;
        }
        textarea{
        	position: absolute;
            font-size: 13px;
            top: 10px;
            padding: 5px 5px;
            resize: none;
/*            height: 90px;*/
            border: none;
            outline: none;
            overflow-y:hidden;
            widows: 70%;
            text-indent: 2em;
        }
        .text >img{
            position: absolute;
            right: 0.2rem;
            height:0.6rem;
            width: 0.6rem;
            top: 0.35rem;
        }
        .copy{
            display: none;
        }

        /*合成弹框*/
        .wait,.file{
            height: 100%;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            background: rgba(0,0,0,0.8);
            z-index: 10000;
            display: none;
        }
        .wait div,.file div{
            height: 1rem;
            font-size: 16px;
            color: white;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            margin: auto;
            position: absolute;
            text-align: center;
        }
        .introduce{
            height: 100%;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            background: rgba(0,0,0,0.7);
            z-index: 10000;
        }
        .introduce div{
            color: white;
            margin-top: 10rem;
            height: 10rem;
            top: 0;
            bottom: 0;
            position: absolute;
            margin: auto 0;
        }
        .introduce div h3{
            text-align: center;
            font-size: 0.8rem;
            margin-bottom: 1rem;
            color: orange;
        }
        .introduce div p{
            font-size: 0.6rem;
            margin-left: 2rem;
            color: #f1f1f1;
            width: 72%;
        }