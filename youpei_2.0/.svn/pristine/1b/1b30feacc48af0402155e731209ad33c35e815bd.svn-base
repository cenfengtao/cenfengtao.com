<include file="Common:header"/>
<link rel="stylesheet" href="/Public/Home/css/style_v3.css">
<style type="text/css">
    .search-head {

        background: #386998;
    }

    .shop-list .ty-tools-search {
        left: 3vw;
        position: relative;

    }

    .shop-list .ty-tools-search .input-jump {
        background: #fff;
        color: #2f8eba;
    }

    .shop-list .ty-tools-search i::before {
        top: .8rem;
        color: #2f8eba;
    }

    .shop-list .ty-tools-cityswitch {
        top: 3.2rem;
        color: #fff;
    }

    .shop-list .kap-input-value, [data-icon-blue]::before {
        color: #fff;
    }

    .institu-list {
        text-align: center;

    }

    .institu-list li {
        border-top: 10px solid #f0f1f1;
        line-height: 1.2rem;
    }

    .institu-list .shoplogo img {
        margin-top: 0rem;
    }

    .institu-list .shoplogo span {
        font-weight: bold;

    }

    .institu-list .details span {
        width: 4rem;
        border-radius: .111rem;
        text-align: center;
        background-color: #386998;
        color: #fff;
        height: 1.4rem;
        line-height: 1.4rem;
        display: inline-block;
    }

    .institu-list .details span:nth-child(2) {
        margin-left: .5rem;
        background-color: #db6066;
    }

    .institu-list label {
        font-size: .6rem;
        font-weight: 600;
    }

    .institu-list .score {
        line-height: 1.1rem;
        margin-bottom: 1rem
    }

    .institu-list .score span, .institu-list .score i {
        font-size: 0.6rem;
        font-weight: normal;
    }

    .top-nav-v3 .lists-v3 a {
        width: 3rem;
    }

    .empty {
        line-height: 3rem !important;
    }

    .full-star {
        display: inline-block;
        background: url(../../../../Public/images/star-full.png) no-repeat center center;
        width: 0.8rem;
        height: 0.8rem;
        background-size: 100%;
    }
    .empty-star {
        display: inline-block;
        background: url(../../../../Public/images/star-empty.png) no-repeat center center;
        width: 0.8rem;
        height: 0.8rem;
        background-size: 100%;
    }
</style>
<div id="page_user" title="{$title}" class="kap-page kap-page-current">
    <div class="kap-top ty-menu-top">
        <div id="tools_msg" class="ty-tools ty-tools-inner ty-tools-current">
            <span class="title">{$title}<span class="num"></span></span>
            <a href="javascript:history.go(-1);" class="btn left btn-user" title="返回" data-icon="ɒ"></a>
            <a href="{:U('Index/index',array('current'=>'1'))}" class="btn right btn-user" title="返回首页"
               data-icon="Ņ"></a>
        </div>
    </div>
    <div class="ty-page">
        <div class="shop-list">
            <div class="search-head">
                <div class="ty-tools-search">
                    <input type="text" placeholder="更多机构">
                    <i data-icon="Đ"></i>
                </div>
                <!--  -->
                <!--<div class="ty-tools-cityswitch">-->
                    <!--<select id="sel_city_switch" data-kap-skin="sel-city-switch" data-icon-blue="Ė"-->
                        <!--style="opacity: 0; position: absolute; border: medium none; left: 0px; top: 0px; width: 100%; height: 100%;">-->
                        <!--<option value="1">广州</option>-->
                        <!--<option value="2">深圳</option>-->
                        <!--<option value="0" selected="">全部</option>-->
                    <!--</select>-->
                <!--</div>-->
            </div>
            <div class="institu-list">
                <ul>
                    <foreach name="orgList" item="val">
                        <a href="javascript:getInfo({$val['id']})">
                            <li>
                                <div class="shoplogo">
                                    <img src="{$val['picture']}">
                                    <span>{$val['org_name']}</span>
                                </div>
                                <div class="score">
                                    <span>机构评级</span>
                    <span>
                        <for name="$val['org_star']" start="0" end="$val['org_star']" step="1">
                            <span class="full-star"></span>
                        </for>
                         <for name="$val['org_star']" start="0" end="5 - $val['org_star']" step="1">
                             <span class="empty-star"></span>
                         </for>
                    </span>
                                    <span>环境评级</span>
                 <span class="star">
                     <for name="$val['env_star']" start="0" end="$val['env_star']" step="1">
                         <span class="full-star"></span>
                     </for>
                     <for name="$val['env_star']" start="0" end="5 - $val['env_star']" step="1">
                         <span class="empty-star"></span>
                     </for>
                    </span>
                                    <span>教学质量</span>
                 <span class="star">
                      <for name="$val['quality_star']" start="0" end="$val['quality_star']" step="1">
                          <span class="full-star"></span>
                      </for>
                        <for name="$val['quality_star']" start="0" end="5 - $val['quality_star']" step="1">
                            <span class="empty-star"></span>
                        </for>
                    </span>
                                </div>
                            </li>
                        </a>
                    </foreach>
                </ul>
            </div>
        </div>
    </div>
</div>
<include file="Common:footer"/>
<script>
    function getInfo(id) {
        window.location.href = "{:U('Organization/home')}?id=" + id;
    }
</script>
</body>
</html>