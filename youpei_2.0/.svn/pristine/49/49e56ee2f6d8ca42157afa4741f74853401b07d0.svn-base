
/*头部 start*/
.header{
	height: 1.2rem;
	line-height: 1.22rem;
	position: fixed;
	z-index: 10000;
	top: 0;
	width: 100%;
	background:white;
}
.header a{
	color: #065b9c;
	left: 0.27rem;
	font-size: 0.4rem;
	position: absolute;
	font-family: "宋体";
	font-weight: bold;
}
.header h3{
	text-align: center;
	font-size: 0.52rem;
	color: #065b9c;
	margin-left: 0.3rem;
}
/*头部 end*/

/*中部 start*/
.middle{
	background:#f0f1f1; 
	overflow: hidden;
	margin-top: 1.2rem;
}
.middle>img{
	width: 11.25rem;
	height: 3.75rem;
	margin-top: 0.15rem;
}
.middle>span{
	font-size: 0.45rem;
	display: block;
	padding: 0.46rem 0 0.68rem 0.38rem;
	color: #4a4a4a;
	background: white;
}
.content{
	padding-bottom: 3.8rem;
	background: white;
}
.content a img{
	width: 9.6rem;
	height: 5.4rem;
	margin: 0 auto;
	margin-top: -0.05rem;
}
.content h4,.content p{
	padding-left: 1.05rem;
}
.content h4{
	font-size: 0.45rem;
	margin:0.7rem 0;
	color: #4b4b4b;
}
.content p{
	font-weight: bold;
	font-size: 0.4rem;
}