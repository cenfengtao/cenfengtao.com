<!-- self -->
<script>
    var SCOPE = {
        'delete_url': '{:U("Article/delete")}'
    };
    $('.accomp_lish').click(function () {
        var id = $(this).attr('attr_id');
        var message = $(this).attr('attr_message');
        var url = "{:U('Order/accompLish')}";
        layer.open({
            type: 0,
            title: '确认信息',
            btn: ['确认', '取消'],
            icon: 3,
            closeBtn: 2,
            content: message,
            yes: function () {
                accomplish(url, {'id': id});
            }
        });
    });
    function accomplish(url, data) {
        $.post(url, data, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, '');
            } else {
                return dialog.error(result.message);
            }
        }, 'JSON');
    }
</script>
