<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>申诉订单列表</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">用户名</th>
                                        <th class="column-title">商品名称</th>
                                        <th class="column-title">品类</th>
                                        <th class="column-title">申诉时间</th>
                                        <th class="column-title">状态</th>
                                        <th class="column-title">操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="list" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['username']}</td>
                                            <td>{$val['title']}</td>
                                            <td>{$val['cate_name']}</td>
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['status'] == 1?'申诉中':完成}</td>
                                            <td>
                                                <if condition="$val['status'] eq 1">
                                                    <a href="javascript:;" attr_id="{$val['id']}" attr_message="确认完成申诉吗？" class="btn btn-info btn-xs accomp_lish btn_access" access_id="250">完成</a>
                                                    <else/>
                                                </if>
                                                <a href="{:U('Order/check',array('id'=>$val['id']))}" class="btn btn-infos btn-xs btn_access" access_id="251">查看</a>
                                            </td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                                <div class="pagination pagination-small">{$page}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
