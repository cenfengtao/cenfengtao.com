.footer ul li a img{
	margin-top: 0.52rem;
}
.footer ul li a span{
	margin-left: 0.14rem;
}
body,html{
	background: #f1f1f1;
}
.middle{
	padding-top: 1.2rem;
	padding-bottom: 1.6rem;
}

.advert{
	margin-top: 0.12rem;
	margin-bottom: 0.15rem;
}
.advert img{
	width: 100%;
	/*height: 4.72rem;*/
}

.joinNum{
	height: 1.07rem;
	line-height: 1.07rem;
	background: white;
	margin-bottom: 0.2rem;
}
.joinNum div{
	font-size: 0.55rem;
}
.joinNum div span{
	width: 0.12rem;
	height: 0.46rem;
	background: #e2416e;
	border-radius: 0.1rem;
	display: inline-block;
	margin-left: 0.4rem;
	margin-right: 0.2rem;
}
.joinNum div strong{
	font-size: 0.55rem;
	font-weight: normal;
	color: #3878a4;
}
.people{
	overflow: hidden;
	background: white;
}
.people ul li{
	width: 50%;
	float: left;
	text-align: center;
	height: 1.07rem;
	line-height: 1.07rem;
}
.people ul li span{
	display: block;
	font-size: 0.55rem;
	color: #757679;
}
.people ul li span strong{
	font-size: 0.55rem;
	/*color: #757679;*/
	font-weight: normal;
}
.people ul li.on{
	border-bottom: 0.1rem solid #1a679d;
}
.people ul li.on span{
	color: #3878a4;
}
.people ul li.on strong{
	color: #3878a4;
}


.orgList{
	margin-top: 0.2rem;
}
.orgList ul li{
	height: 3.94rem;
	background: white;
	padding-top: 0.15rem;
	margin-bottom: 0.2rem;
}
.orgList .img{
	width: 4.39rem;
	height: 3.62rem;
	position: relative;
	float: left;
}
.orgList .img >img{
	width: 100%;
	height: 100%;
}

.orgList .img .hot{
	position: absolute;
	z-index: 1000;
	right: 0;
	top: 0.2rem;
	width: 3.11rem;
	height: 0.72rem;
	line-height: 0.72rem;
	background: url(../../../../Public/images/hotShape.png) no-repeat;
	background-size: 3.11rem 0.72rem;
}
.hot span{
	font-size: 0.4rem;
	color: white;
	float: left;
	margin-left: 0.4rem;
	margin-right: 0.05rem;
}
.hot img{
	width: 0.46rem;
	height: 0.53rem;
	float: left;
	margin-top: 0.08rem;
}
.orgList .text{
	float: left;
}
.text h3{
	font-size: 0.48rem;
	color: #386998;
	padding-left: 0.22rem;
	width: 5.95rem;
	height: 0.91rem;
	line-height: 0.91rem;
}
.text .works{
	padding-left: 0.22rem;
	font-size: 0.4rem;
	background: #e3f2f9;
	width: 5.95rem;
	height: 0.91rem;
	line-height: 0.91rem;
}
.text .works span{
	font-size: 0.4rem;
	color: #386998;
}
.text .all{
	padding-left: 0.22rem;
	font-size: 0.4rem;
	width: 5.95rem;
	height: 0.91rem;
	line-height: 0.91rem;
}
.text .all span{
	font-size: 0.4rem;
	color: #386998;
}
.text .activityTime{
	padding-left: 0.22rem;
	font-size: 0.4rem;
	background: #e3f2f9;
	width: 5.95rem;
	height: 0.91rem;
	line-height: 0.91rem;
}
.text .activityTime span{
	font-size: 0.4rem;
	color: #386998;
}


.orgList .next{
	width: 1.08rem;
	height: 3.64rem;
	position: absolute;
	background: #99d8f6;
	right: 0;
	z-index: 10000;
}
.orgList .next img{
	width: 0.69rem;
	height: 0.68rem;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}