<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>修改折扣商品</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br/>
                            <form id="demo-form2" data-parsley-validate
                                  class="form-horizontal form-label-left form-youpei">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">抢购课程</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="text" name="title" class="form-control col-md-7 col-xs-12"
                                               value="{$sale['title']}" min="0" readonly="readonly">
                                    </div>
                                </div>
                                <div class="form-group class_normal">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">课程规格</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12 class_price">
                                        <a class="btn btn-info btn-xs">{$classNormal}</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">折扣价</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="price" class="form-control col-md-7 col-xs-12"
                                               value="{$sale['price']}" min="0">
                                        <small>原价:<span id="lastPrice">{$originalPrice}</span></small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">库存</label>
                                    <div class="col-md-3 col-sm-6 col-xs-12">
                                        <input type="number" name="count" class="form-control col-md-7 col-xs-12"
                                               value="{$sale['count']}" min="0">
                                    </div>
                                </div>
                                <!-- key值 -->
                                <input type="hidden" name="id" value="{$sale['id']}">
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">重置</button>
                                        <button type="button" id="table-button-submit" class="btn btn-success">提交
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
