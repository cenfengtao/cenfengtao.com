<script>
    var SCOPE = {
        'jump_url': '{:U("Qrcode/setReply")}',
        'success_url': '{:U("Qrcode/qrcodeList")}'
    };
    var ThinkPHP = window.Think = {
        "ROOT": "__ROOT__",
        "PUBLIC": "__PUBLIC__",
        "DOMAIN": "{:HTTPDomain()}"
    };

    $(function () {
        var uploading = null;
        uploadFile({
            server: "{:U('Qrcode/uploadImage')}",
            pick: '#filePicker',
            formData: {dir: 'adspic'},
            callback: function (f) {
                layer.close(uploading);
                var json = WST.toJson(f);
                var imagePath = '/' + json.file.savepath + json.file.savethumbname;
//                $('#preview').attr('src', ThinkPHP.DOMAIN + "/" + json.file.savepath + json.file.savethumbname);
                $('#upload_image').val('/' + json.file.savepath + json.file.savethumbname);
//                $('#preview').show();
                preview(imagePath);
            },
            progress: function (rate) {
                uploading = WST.msg('正在上传图片，请稍后...');
            }
        });
    });

    function preview(path) {
        var url = "{:U('Qrcode/preview')}";
        $.post(url, {path: path}, function (result) {
            if (result.status == 0) {
                return dialog.error(result.message);
            }
            $('#upload_preview').val('/' + result.data.path);
            $('#previewQrcode').attr('src', '/' + result.data.path);
            $('#previewQrcode').show();
        }, 'json')
    }
</script>
