<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>积分详情</h2>
                            <div class="clearfix"></div>
                            <h4>总获得积分: {$totalGetIntegral?$totalGetIntegral:0} &nbsp;可用积分: {$nowIntegral?$nowIntegral:0} 已用积分: {$totalUseIntegral?$totalUseIntegral:0}</h4>
                        </div>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">用户名</th>
                                        <th class="column-title">积分</th>
                                        <th class="column-title">状态</th>
                                        <th class="column-title">录入时间</th>
                                        <th class="column-title">类型</th>
                                        <th class="column-title">内容</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="recordList" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['username']}</td>
                                            <td>{$val['integral']}</td>
                                            <td>{$val['status'] == 0?'未录入':($val['status'] == 1?'成功':'失败')}</td>
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['type'] == 1?'支出':'收入'}</td>
                                            <td>{$val['desc']}</td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
