    <body class="kap-loading ty-view-all">
        <include file="Common:common"/>
        <header class="header">
            <a href="javascript:history.back()">
                <img src="../../../../Public/images/back.png" alt="">
            </a>
            <h3>社群</h3>
        </header>
        
        <article class="middle">
            <div class="advert">
                <img src="../../../../Public/images/scheduleAdvert.jpg" alt="">
            </div>
            <div class="courseContent">
                <ul>
                </ul>
            </div>
        </article>
        <footer class="footer">
            <div></div>
            <ul class="icon">
                <li>
                    <img src="__PUBLIC__/image/circle.png" alt="">
                    <a href="{:U('Index/index',array('current'=>'1'))}">
                        <img src="__PUBLIC__/image/footer_icon1.png"/>
