body,html{
	background: #f1f1f1;
}
.middle{
	padding-top: 1.2rem;
}
.works{
	height: 1.35rem;
	line-height: 1.35rem;
	width: 100%;
	background: #386998;
	overflow: hidden;
	margin: 0.16rem 0 0.2rem;
}
.works span{
	color: white;
	font-size: 0.48rem;
	margin-left: 0.33rem;
	float: left;
}
.works input{
	width: 6.8rem;
	height: 0.88rem;
	line-height: 0.9rem;
	padding: 0 0.3rem;
	color: #4791c0!important;
	background: white;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	margin-top: -0.1rem;
	float: left;
	border: 0.01rem solid white;
	margin-top: 0.2rem;
	font-size: 0.45rem;
}

.works img{
	width: 0.69rem;
	height: 0.74rem;
	float: right;
	margin-right: 0.3rem;
	margin-top: 0.25rem;
}



.img{
	height: 7.23rem;
	background: white;
	width: 100%;
	position: relative;
}
.img img{
	width: 9.5rem;
	height: 6.1rem;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	position: absolute;
}

.upload a{
	height: 1.4rem;
	width: 7.1rem;
	display: block;
	margin: 0.97rem auto 0.7rem;
	background: #db6066;
	color: white;
	font-size: 0.63rem;
	line-height: 1.4rem;
	text-align: center;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	font-weight: bold;
}


.explain{
	padding: 0 1.1rem 2rem;
}
.explain h3{
	color: #386998;
	font-size: 0.45rem;
	line-height: 0.65rem;
}
.explain p{
	line-height: 0.65rem;
	font-size: 0.45rem;
	color: #585858;
}