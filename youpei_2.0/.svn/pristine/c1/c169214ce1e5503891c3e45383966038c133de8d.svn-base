    public function ajaxBargain()
    {
        if (!$_GET['pro_id'] || empty($_GET['pro_id'])) {
            return show(0, 'ID不能为空');
        }
        $bargainId = D('Bargain')->isBargain($type = 1, $type_id = $_GET['pro_id']);
        if (!$bargainId) {
            return show(0, '此产品未参加砍价活动');
        }
        $isBuy = '';
        if ($_GET['share_user_id'] == 0 || $_GET['share_user_id'] == $this->user['id']) {
            $isMe = 2;
            //砍价帮助人数和金额
            $bargainHelpUser = D('BargainRecord')->bargainHelpByUser($this->user['id'], $bargainId['id'], $bargainId['start_time'], $bargainId['end_time']);
            $bargainPeople = count($bargainHelpUser);
            $bargainPrice = D('BargainRecord')->bargainHelpByPrice($this->user['id'], $bargainId['id'], $bargainId['start_time'], $bargainId['end_time']);
            //付款，未付款，交易完成，退款中，已退款,付款之后不能再使用砍价额度
            $order = M('order')->where(array('user_id' => $this->user['id'], 'product_id' => $_GET['pro_id'],
                'bargain_id' => $bargainId['id'], 'status' => array(array('EQ', 0), array('EQ', 1), array('EQ', 4), array('EQ', 6), array('EQ', 7), 'or'),
                'create_time' => array(array('GT', $bargainId['start_time']), array('LT', $bargainId['end_time']), 'and')))->find();
            if (!$order) {
                $isBuy = -1;
            } else {
                $isBuy = $order['status'];
            }
        } else {
            $isBuy = -1;
            $isMe = 1;
            //砍价帮助人数和金额
            $bargainHelpUser = D('BargainRecord')->bargainHelpByUser($_GET['share_user_id'], $bargainId['id'], $bargainId['start_time'], $bargainId['end_time']);
            $bargainPeople = count($bargainHelpUser);
            $bargainPrice = D('BargainRecord')->bargainHelpByPrice($_GET['share_user_id'], $bargainId['id'], $bargainId['start_time'], $bargainId['end_time']);
        }
        $userImage = [];
        $userPrice = [];
        foreach ($bargainHelpUser as $k => $v) {
            $userImage[$k] = D('User')->getHeadById($v['user_id']);
            $userPrice[$k] = $v['price'];
        }
        $product = M('product')->where(array('id' => $_GET['pro_id']))->find();
        //获取ticket
        $wxuser = get_wxuser($this->token);
        $jssdk = new \JSSDK($wxuser['appid'], $wxuser['appsecret']);
        $signPackage = $jssdk->GetSignPackage();
        //分享内容图片和链接地址
        if (strpos($product['pic_url'], 'http') === false) {
            $shareImg = 'http://' . $_SERVER["HTTP_HOST"] . $product['pic_url'];
        } else {
            $shareImg = $product['pic_url'];
        }
        $userName = D('User')->getNameById($this->user['id']);
        $product['f_title'] = $userName . '邀请你来帮Ta减价!!';
        /*$shareUrl = 'http://' . $_SERVER["HTTP_HOST"] . U('Product/bargain', array('share_user_id' =>
                $this->user['id'], 'pro_id' => $_GET['pro_id'], 'token' => $this->token));*/
        $shareUrl = 'http://' . $_SERVER["HTTP_HOST"] . '/index.php/Product/bargain?share_user_id=' . $this->user['id'] .
            '&pro_id=' . $_GET['pro_id'] . '&token=' . $this->token;
        $data = [
            'signPackage' => $signPackage,
            'shareImg' => $shareImg,
            'shareUrl' => $shareUrl,
            'product' => $product,
            'bargainPeople' => $bargainPeople,
            'bargainPrice' => $bargainPrice,
            'userImage' => $userImage,
            'userPrice' => $userPrice,
