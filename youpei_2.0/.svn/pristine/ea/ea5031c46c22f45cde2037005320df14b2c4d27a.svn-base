.box{
	height: 100%;
	width: 100%;
	position: fixed;
	z-index: 10000;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.5);
}
.box .content{
	height: 13.44rem;
	width: 9.45rem;
	background: white;
	margin: auto;
	bottom: 0;
	top: 0;
	left: 0;
	right: 0;
	position: absolute;
	z-index: 20000;
	-moz-transform:scale(0.5,0.5);  
  	-webkit-transform:scale(0.5,0.5);  
  	-o-transform:scale(0.5,0.5);  
}
.box .content img:first-child{
	width: 100%;
	height: 100%;
}
.close{
	position: absolute;
	right: 0;
	top: 0;
	width: 0.47rem;
	height: 0.47rem;
}
.box1{
	position: absolute;
	bottom: 1.9rem;
	margin: 0 auto;
	left: 0;
	right: 0;
	width: 2.8rem;
	height: 2.02rem;
}
.gift{
    font-size: 0.55rem;
    font-family: "宋体";
