.footer ul li a img{
    margin-top: 0.52rem;
}
.footer ul li a span{
    margin-left: 0.14rem;
}
body,html{
    background: #f1f1f1;
}
.middle{
    padding-top: 1.2rem;
    padding-bottom: 1.6rem;
}
.nav{
    position: fixed;
    width: 100%;
    border-top: 0.12rem solid #f1f1f1;
    background: white;
    z-index: 1000;
}
.nav ul li{
    height: 1.08rem;
    line-height: 1.08rem;
    width: 20%;
    text-align: center;
    float: left;
}
.nav ul li a{
    color: #777777;
    font-size: 0.52rem;
}
.nav ul li.on{
    border-bottom: 0.11rem solid #386998;
}
.nav ul li.on a{
    color: #386998;
}


.order-list{
    margin-top: 1.38rem;
}
.order-list li{
	position: relative;
}
.title{
    height: 1.08rem;
    line-height: 1.08rem;
    overflow: hidden;
    background: white;
    border-bottom: 0.01rem solid #aaaaaa;
}
.title strong{
    font-size: 0.52rem;
    color: #386998;
    float: left;
    margin-left: 0.38rem;margin-right: 0.3rem;
}
.title span{
    font-size: 0.52rem;
    font-family: "宋体";
    float: left;
    margin-top: 0.02rem;
}
.title img{
    height: 0.69rem;
    width: 0.69rem;
    float: right;
    margin-right: 0.48rem;
    margin-top: 0.29rem;
}

.content{
    height: 2.57rem;
    background: white;
}
.content >img{
    width: 3.1rem;
    height: 2.12rem;
    float: left;
    margin: 0.22rem 0.2rem 0 0.38rem;
}

.content .text{
    float: left;
}
.content .text h3{
	font-size: 0.55rem;
	margin-top: 0.25rem;
	color: #386998;
	height: 0.8rem;
	line-height: 0.8rem;
	overflow: hidden;
	width: 7.5rem;
}
.type span{
	height: 0.52rem;
	line-height: 0.52rem;
	padding: 0 0.2rem;
	font-size: 0.34rem;
	color: white;
	display: inline-block;
	margin-right: 0.1rem;
	border-radius: 0.1rem;
	margin-top: 0.05rem;
}
.type span:first-child{
	background: #f6d94f;
}
.type span:nth-child(2){
	background: #6fbee4;
}
.type span:nth-child(3){
	background: #de8cbd;
}
.text p{
	text-align: right;
	margin-right: 0.3rem;
}
.text p strong{
	font-size: 0.6rem;
	color: #db6066;
}
.sign{
	font-size: 0.4rem;
	color: #db6066;
}
.really{
	font-size: 0.4rem;
	color: #386998;
}
.classTime{
	font-size: 0.4rem;
	color: #7a7a7a;
	margin-right: 0.25rem;
}
.time{
	height: 0.93rem;
	line-height: 0.93rem;
	padding: 0 0.22rem;
	background: white;
}
.time span{
	color: #5f5f5f;
	font-size: 0.36rem;
	display: block;
	padding: 0 0.05rem;
	border-bottom: 0.01rem solid gray;
	border-top: 0.01rem solid gray;
}
.sale{
	height: 1.26rem;
	line-height: 1.26rem;
	background: white;
	text-align: right;
}
.sale span{
	font-size: 0.3319rem;
	width: 1.74rem;
	height: 0.48rem;
	line-height: 0.48rem;
	text-align: center;
	display: inline-block;
	border-radius: 0.1rem;
	margin-right: 0.32rem;
}
.sale span:first-child{
	border:0.02rem solid #5f5f5f;
	color: #5f5f5f;
}
.sale span:nth-child(2){
	border: 0.02rem solid #777777;
	color: #777777;
}
.sale span:nth-child(3){
	border: 0.02rem solid #db6066;
	color: #db6066;
}


.alert{
	top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    position: fixed;
    text-align: center;
    font-size: 0.6rem;
    z-index: 10000;
    height: 50px;
}
.finished{
	position: absolute;
	width: 2.19rem;
	height: 2.19rem;
	top: 0.6rem;
	right: 1rem;
	z-index: 1000;
}
