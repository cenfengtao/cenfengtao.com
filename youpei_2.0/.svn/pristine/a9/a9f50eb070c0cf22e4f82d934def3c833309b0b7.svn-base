.order-list {
    width: 100%;
    height: auto;
}

.order-list li {
    height: 5.5rem;
    padding: 10px 0;
    border-top: 7px solid #f0f1f2;
    border-bottom: 7px solid #f0f1f2;
}

.order-list .left {
    float: left;
    width: 30%;
    height: 100%;
}

.order-list .left img {
    width: 100%;
    height: 100%;
}

.order-list .rig {
    float: left;
    width: 70%;
    font-weight: 600;
    padding: 10px 0 10px 10px;
}

.order-list .rig .title {
    font-size: 1.2rem;
    color: #386998;
}

.order-list .rig .desc {
    color: #386998;
    padding: 5px 0 10px 0;
}

.order-list .rig .price {
    font-size: 1.5rem;
    color: #db6066;
}

.order-list .rig .price span {
    font-size: 1rem;
}

.order-list .rig .time {
    font-size: 0.8rem;
    color: #999;
    position: relative;
}

.order-list .rig .zhifu, .order-list .rig .order-again {
    position: absolute;
    top: -0.2rem;
    right: 5rem;
    color: #c7000a;
    border: 1px solid #c7000a;
    padding: 5px 5px;
    border-radius: 10px;
}

.order-list .rig .quxiao {
    position: absolute;
    top: -0.2rem;
    right: 0.7rem;
    color: #6e6e6e;
    border: 1px solid #6e6e6e;
    padding: 5px 5px;
    border-radius: 10px;
}

.con {
    margin: 0 0 1rem 0;
}

.con .details {
    margin: 20px 0;
    text-align: center;
    font-size: 1.2rem;
    font-weight: 600;
    color: #386998;
}

.con .mes {
    margin: 0 auto 20px auto;
    width: 90%;
}

.con .mes #content {
    width: 100%;
    height: 9rem;
    border: 3px solid #426176;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 600;
    padding: 15px 15px;
}

.con p {
    margin: 0 auto 20px auto;
    color: #386998;
    font-size: 1rem;
    font-weight: 600;
}

.con .pic {
    width: 90%;
    margin: 0 auto;
}

.con .pic ul {
    text-align: center;
}

.con .pic ul li {
    width: 30%;
    margin: 0 7px;
    height: 4rem;
    line-height: 4.5rem;
    text-align: center;
    display: inline-block;
    border: 3px dashed #6A7678;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
}

.con .pic ul li input {
    position: absolute;
    font-size: 100px;
    right: 0;
    top: 0;
    opacity: 0;
    filter: alpha(opacity=0);
    cursor: pointer
}

.con .pic ul li .upload {
    display: inline-block;
    text-align: center;
    line-height: 2rem;
    margin: 1rem;
    background: #216C9D;
    border-radius: 50%;
    font-size: 2rem;
    width: 2rem;
    height: 2rem;
    color: #fff;
}

.con .pic ul li div {
    line-height: 0;
}

.bot {
    background: #EFEFEF;
    padding: 3rem 0 2rem 0;
}

.but {
    /*margin:30px auto -8rem;*/
    text-align: center;
    line-height: 3rem;
    border-radius: 0.2rem;
    width: 62%;
    height: 3rem;
    background-color: #EF5764;
    color: #fff;
    font-size: 1.5rem;
    font-weight: 600;
}

.bot ul {
    width: 67%;
    margin: 1rem auto 0 auto;
}

.bot ul li {
    font-weight: 600;
    position: relative;
    color: #848484;
}

.bot ul li i {
    position: absolute;
    top: 0;
    left: 0;
    font-size: 1.5rem;
}

.bot ul li span {
    line-height: 1.5rem;
    font-size: 0.9rem;
    margin-left: 30px;
}

.order-list .rig .appeal {
    position: absolute;
    top: -0.2rem;
    right: 5rem;
    color: #587f90;
    border: 1px solid #587f90;
    padding: 5px 5px;
    border-radius: 10px;
}

.order-list .rig .appealing {
    position: absolute;
    top: -0.2rem;
    right: 5rem;
    color: #56bcaf;
    border: 1px solid #56bcaf;
    padding: 5px 5px;
    border-radius: 10px;
}

.order-list .rig .addComment {
    position: absolute;
    top: -0.2rem;
    right: 0.7rem;
    color: orange;
    border: 1px solid orange;
    padding: 5px 5px;
    border-radius: 10px;
}

.order-list .rig .isComment, .order-list .rig .cancel-status {
    position: absolute;
    top: -0.2rem;
    right: 0.7rem;
    color: #6e6e6e;
    padding: 5px 5px;
}

.org-star {
    margin-top: 1rem;
}

.star-span {
    display: inline-block;
    height:2rem;
    line-height: 2rem;
    vertical-align: text-bottom;
    margin-left:3rem;
}

.org-star .org-star-ul ,.env-star .env-star-ul ,.quality-star .quality-star-ul{
    display: inline-block;
}

.org-star .org-star-ul li,.env-star .env-star-ul li,.quality-star .quality-star-ul li {
    float: left;
    width: 2rem;
    height: 2rem;
    overflow: hidden;
    margin-left:0.5rem;
    background: url('../../images/star-empty.png') no-repeat center center;
    background-size: 100%;
}

.org-star .org-star-ul .light ,.env-star .env-star-ul .light,.quality-star .quality-star-ul .light{
    background: url('../../images/star-full.png') no-repeat center center;
    background-size: 100%;
}

.submit-comment {
    display: block;
    width:52%;
    height:2.5rem;
    margin:5rem auto 0 auto;
    background: #db6066;
    font-size:1.25rem;
    border-radius:12px;
    border:none;
}

.submit-comment a {
    color:#ffffff;
}