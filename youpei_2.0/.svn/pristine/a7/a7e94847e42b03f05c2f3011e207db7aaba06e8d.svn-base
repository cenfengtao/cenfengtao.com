body,html{
	font-family: "微软雅黑";
    background-color: #f0f1f1;
}	

/*中部样式*/
.middle{
    margin-top: 1.44rem;
    padding-bottom: 1.7rem;
    overflow: hidden;
}

/*头像部分*/
.head{
	height: 4.56rem;
	background: url(../../../../Public/images/bg.jpg) no-repeat;
	background-size: 100% 4.56rem;
	overflow: hidden;
	margin-bottom: 0.2rem;
}
.headLeft{
	float: left;
    width: 50%;
    text-align: center;
    margin-top: 0.4rem;
    border-right: 0.04rem solid white;
    box-sizing: border-box;
}
.headLeft img{
	width: 2.38rem;
	height: 2.38rem;
	margin: 0.5rem 0 0.2rem 1.7rem;
	border-radius: 50%;
}
.headLeft span{
	font-size: 0.48rem;
	color: white;
}
.headRight{
	float: right;
	width: 50%;
	text-align: center;
}
.headRight img{
	width: 2.38rem;
	height: 2.38rem;
	margin: 0.9rem 0 0.2rem 1.7rem;
}
.headRight span{
	font-size: 0.48rem;
	color: white;
	margin-top: 0.35rem;
}


/*公共标题*/
.title{
	overflow: hidden;
	height: 1.2rem;
	line-height: 1.2rem;
	background: white;
	border-bottom:0.02rem solid #f0f1f1;
}
.title img{
	width: 0.75rem;
	height: 0.72rem;
	float: left;
	margin: 0.24rem 0.24rem 0 0.55rem;
}
.title span{
	float: left;
	font-size: 0.48rem;
	font-weight: bold;
	color: #386998;
}
.title a{
	float: right;
	font-size: 0.42rem;
	color: #5b5b5b;
	font-family: "宋体";
	margin-right: 0.5rem;
}


/*我的积分*/
.integral{
	background: white;
	margin-bottom: 0.2rem;
}
.integralText ul{
	display: flex;
	justify-content: space-around;
}
.integralText ul li{
	height: 1.16rem;
	line-height: 1.16rem;
	font-size: 0.48rem;
}
.integralNum span{
	font-size: 0.48rem;
	font-weight: bold;
	color: #386998;
}
.getIntegral,.useIntegral,.leaveIntegral{
	width: 2.29rem;
	height: 1.04rem;
	border-radius: 0.1rem;
	border:0.03rem solid #353535;
	line-height: 1.04rem;
	text-align: center;
	display: inline-block;
}
.getIntegral{
	margin-left: 0.8rem;
}
.integralNum .leaveIntegral{
	color: #cc585e;
}
.integralUse{
	display: flex;
	justify-content: space-around;
	padding: 0.54rem 0;
}
.integralUse a{
	display: inline-block;
	width: 5.02rem;
	height: 1.23rem;
	font-size: 0.48rem;
	font-weight: bold;
	text-align: center;
	line-height: 1.23rem;
	color: white;
	border-radius: 0.1rem;
}
.integralUse a:first-child{
	background: #386998;
}
.integralUse a:nth-child(2){
	background: #db6066;
}