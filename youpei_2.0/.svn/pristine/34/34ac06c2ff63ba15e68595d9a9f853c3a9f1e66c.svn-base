.footer ul li a img{
	margin-top: 0.52rem;
}
.footer ul li a span{
	margin-left: 0.14rem;
}
body,html{
	background: #f1f1f1;
}
.middle{
	padding-top: 1.32rem;
	padding-bottom: 1.6rem;
}

.works{
	background: white;
}
.works .title{
	height: 1.2rem;
	line-height: 1.2rem;
}
.works .title span{
	float: right;
	margin-right: 0.8rem;
	font-size: 0.48rem;
}
.works .title span a{
	font-size: 0.48rem;
	color: #386998;
	text-decoration: underline;
}

.works .type img{
	width: 9.5rem;
	height: 6.11rem;
	margin: 0 auto;
}
.works .type video{
	width: 9.5rem;
	height: 6.11rem;
	margin: 0 auto;
}
.introduce{
	width: 10.55rem;
	border-bottom: 0.01rem solid #aeaeae;
	margin: 0 auto;
}
.call{
	font-size: 0.48rem;
	line-height: 0.72rem;
	text-align: center;
	margin-top: 0.3rem;
}
.call span{
	font-size: 0.48rem;
}
.call span strong{
	font-size: 0.48rem;
	font-weight: normal;
	color: #386998;
}
.name{
	font-size: 0.48rem;
	line-height: 0.72rem;
	text-align: center;
	margin-bottom: 0.3rem;
}
.name span{
	font-size: 0.48rem;
}
.name span strong{
	font-size: 0.48rem;
	font-weight: normal;
}



.vote p{
	padding: 0.32rem 0 0.5rem 2.67rem;
}
.vote p span {
	font-size: 0.52rem;
	float: left;
}
.vote p input{
	width: 0.99rem;
	height: 0.63rem;
	border: 0.04rem solid #386998;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	text-align: center;
	color: #386998;
	margin: 0rem 0.3rem 0 0.2rem;
	float: left;
	font-size: 0.52rem;
	line-height: 0.65rem;
}
.vote p a{
	height: 0.71rem;
	line-height: 0.71rem;
	width: 1.99rem;
	text-align: center;
	font-size: 0.48rem;
	color: white;
	margin-left: 0.34rem;
	background: #db6066;
	display: inline-block;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	font-weight: bold;
}


.more{
	height: 1.06rem;
	line-height: 1.06rem;
	margin-top: 0.15rem;
	margin-bottom: 0.01rem;
	background: white;
	overflow: hidden;
}
.more img{
	width: 0.75rem;
	height: 0.72rem;
	margin-left: 0.6rem;
	margin-right: 0.2rem;
	float: left;
	margin-top: 0.18rem;
}
.more span{
	font-size: 0.48rem;
	color: #386998;
	float: left;
}
.more a{
	font-size: 0.48rem;
	float: right;
	margin-right: 0.38rem;
	color: #757575;
}



.img{
	background: white;
	padding: 0.27rem 0rem 0.36rem;
	overflow: hidden;
}

.img ul li{
	float: left;
	width: 50%;
}
.img img{
	width: 5.12rem;
	height: 3.22rem;
	margin:0 auto;
}
.img video{
	width: 5.12rem;
	height: 3.22rem;
	margin:0 auto;
}

.join a{
	height: 1.4rem;
	width: 7.1rem;
	display: block;
	margin: 0.76rem auto 0.64rem;
	background: #db6066;
	color: white;
	font-size: 0.63rem;
	line-height: 1.4rem;
	text-align: center;
	border-radius: 0.1rem;
	-webkit-border-radius:0.1rem;
	font-weight: bold;
}



.text{
	width: 10rem;
	margin: 0 auto;
	padding-bottom: 0.7rem;
}
.text p{
	font-size: 0.4rem;
	line-height: 0.65rem;
}
.text p span{
	font-size: 0.8rem;
	margin-right: 0.2rem;
	float: left;
}