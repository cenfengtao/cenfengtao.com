.footer ul li a img{
    margin-top: 0.52rem;
}
.footer ul li a span{
    margin-left: 0.14rem;
}
body,html{
    background: #f1f1f1;
}
.middle{
    padding-top: 1.2rem;
    padding-bottom: 1.6rem;
}
.nav{
    position: fixed;
    width: 100%;
    border-top: 0.12rem solid #f1f1f1;
    background: white;
    z-index: 1000;
}
.nav ul li{
    height: 1.08rem;
    line-height: 1.08rem;
    width: 20%;
    text-align: center;
    float: left;
}
.nav ul li a{
    color: #777777;
    font-size: 0.52rem;
}
.nav ul li.on{
    border-bottom: 0.11rem solid #386998;
}
.nav ul li.on a{
    color: #386998;
}


.order-list{
    margin-top: 1.38rem;
}
.title{
    height: 1.08rem;
    line-height: 1.08rem;
    overflow: hidden;
    background: white;
    border-bottom: 0.01rem solid #aaaaaa;
}
.title strong{
    font-size: 0.52rem;
    color: #386998;
    float: left;
    margin-left: 0.38rem;margin-right: 0.3rem;
}
.title span{
    font-size: 0.52rem;
    font-family: "宋体";
    float: left;
    margin-top: 0.02rem;
}
.title img{
    height: 0.69rem;
    width: 0.69rem;
    float: right;
    margin-right: 0.48rem;
    margin-top: 0.29rem;
}

.content{
    height: 2.57rem;
    background: white;
}
.content >img{
    width: 3.1rem;
    height: 2.12rem;
    float: left;
    margin: 0.22rem 0.2rem 0 0.38rem;
}

.content .text{
    float: left;
}