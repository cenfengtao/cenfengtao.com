        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>审核团购列表</h2>
                            <div class="clearfix"></div>
                        </div>
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="btn_access" access_id="149"><a href="{:U('Check/proUpList')}">上架商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="170"><a href="{:U('Check/parUpList')}">亲子活动</a>
                            </li>
                            <li role="presentation" class="active btn_access" access_id="153"><a href="{:U('Check/groupList')}">团购商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="157"><a href="{:U('Check/activityList')}">机构活动</a>
                            </li>
                        </ul>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">创建时间</th>
                                        <th class="column-title">商品名称</th>
                                        <th class="column-title">机构</th>
                                        <th class="column-title">现价</th>
                                        <th class="column-title">状态</th>
                                        <th class="column-title">失败原因</th>
                                        <th class="column-title no-link last"><span class="nobr">操作</span></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <volist name="list" id="val" key='i'>
                                        <tr class="even pointer">
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['title']}</td>
                                            <td>{$val['org_name']}</td>
                                            <td>{$val['price']}</td>
                                            <td>{$val['check_status'] == 1 ? '审核中':($val['check_status'] == 2 ? '通过': '审核失败')}</td>
                                            <td>{$val['err_msg']}</td>
                                            <td class="last">
                                                <a href="{:U('Check/checkGroup',array('id'=>$val['id']))}"
                                                   class="btn btn-info btn-xs btn_access" access_id="154">查看</a>
                                                <a href="javascript:changeStatus({$val['id']});"
                                                   class="btn btn-success btn-xs btn_access" access_id="155">审核</a>
                                            </td>
                                        </tr>
                                    </volist>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
