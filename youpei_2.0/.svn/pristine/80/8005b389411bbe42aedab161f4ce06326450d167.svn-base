/*头部 start*/
.header{
    height: 1.2rem;
    line-height: 1.22rem;
    position: fixed;
    width: 100%;
    background: white;
    overflow: hidden;
    z-index: 100;
    clear: both;
}
.header a:first-child{
    left: 0.27rem;
    position: absolute;
}
.header a:first-child img{
    margin-top: 0.4rem;
    height: 0.5rem;
}
.header h3{
    text-align: center;
    font-size: 0.52rem;
    color: #065b9c;
    margin-left: 0.3rem;
    margin-top: 0.05rem;
}
/*头部 end*/
/*中部 start*/
.middle{
    padding-top: 1.2rem;
    background: #f0f1f1;
}
.leave{
    background: white;
}
textarea{
    width: 9.78rem;
    height: 6.6rem;
    margin: 0.34rem auto;
    display: block;
    padding: 0.2rem;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color: #454545; opacity:1; 
}

::-moz-placeholder { /* Mozilla Firefox 19+ */
    color: #454545;opacity:1;
}

textarea:-ms-input-placeholder{
    color: #454545;opacity:1;
}

textarea::-webkit-input-placeholder{
    color: #454545;opacity:1;
}
