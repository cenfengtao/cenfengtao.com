<include file="Common:header"/>
<!-- <link rel="stylesheet" href="__PUBLIC__/Home/css/main.css"> -->
<style type="text/css">
.m-hdlist{ width: 100%;height: 100%; margin: 0 auto;}
.m-main{  margin-top: 3rem;}
.title-g,.title-r,.title-b{
    background: #ffffff;
    margin-left: .5rem;
    border-bottom: 2px solid #f0f1f1;
    height: 2rem;
    display: block;
font-size: .9rem;
}
.title-g span{
    padding-left:.4rem; 
     margin-left: .4rem;
     font-weight: bold;
     line-height: 1.8rem;
     border-left: 4px solid #4c8f00;

}
.title-r span{
    padding-left:.4rem; 
     margin-left: .4rem;
     font-weight: bold;
     line-height: 1.8rem;
     border-left: 4px solid red;

}
.title-b span{
    padding-left:.4rem; 
     margin-left: .4rem;
     font-weight: bold;
     line-height: 1.8rem;
     border-left: 4px solid #386998;
}
.m-main ul li{
    float: left;
    margin-top: 0.5rem;
    width: 33%;
    padding-bottom: .5rem; 
   display: block;
}
ul.m-list{
     float:left;
     border-bottom: 3px solid #f0f1f1;
     width: 100%;
}
.m-main ul li .ico {
    height: 3rem;
    width: 3rem;
   margin: 0 auto;
}
.m-main ul li .fz16 {
text-align: center;
font-weight: normal;
font-size: .8rem;
}
.m-main img{

    height: 100%;
    width: 100%;
}
.m-main .red{
    color:red;
}
.m-main .blue{
    color:#386998;
}
.m-main .green{
    color:green;
}

</style>
<div class="kap-top ty-menu-top">
    <div id="tools_msg" class="ty-tools ty-tools-inner ty-tools-current">
        <span class="title">{$title}<span class="num"></span></span>
        <a href="javascript:void(0);" onclick="history.go(-1); " class="btn left btn-user" title="返回" data-icon="ɒ"></a>
        <a href="{:U('Personal/index',array('current'=>'4'))}" class="btn right btn-user" title="返回个人中心"
           data-icon="Ņ"></a>
    </div>
</div>
<div class="m-hdlist">
    <div class="m-main">

        <div class="title-g"><span>我的积分统计</span></div>

        <ul class="m-list clr">
          <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon01.png">
           </div>
            <div class="fz16">
            获得积分总汇<br/>
            <span class="red">{$integral.totalGet|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon02.jpg">
           </div>
            <div class="fz16">
            积分使用汇总<br/>
            <span class="blue">{$integral.totalUse|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon02.png">
           </div>
            <div class="fz16">
            积分余额<br/>
            <span class="green">{$integral.now|default='0'}</span>
            </div>
          </li>
        </ul>
        <div style="clear:both"></div>

        <div class="title-r"><span>我的积分获得</span></div>
           <ul class="m-list clr">
          <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon03.png">
           </div>
            <div class="fz16">
            注册<br/>
            <span class="red">+{$integral.registerIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon04.png">
           </div>
            <div class="fz16">
            签到<br/>
            <span class="red">+{$integral.singIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon05.png">
           </div>
            <div class="fz16">
            转发<br/>
            <span class="red">+{$integral.shareIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon06.png">
           </div>
            <div class="fz16">
            到访<br/>
            <span class="red">+{$integral.visitIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon07.png">
           </div>
            <div class="fz16">
            推荐<br/>
            <span class="red">+{$integral.inviteRegIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon08.png">
           </div>
            <div class="fz16">
            报名<br/>
            <span class="red">+{$integral.signClassIntegral|default='0'}</span>
            </div>
          </li>
        </ul>
        <div style="clear:both"></div>

        <div class="title-b"><span>我的积分使用</span></div>
           <ul class="m-list clr">
          <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon09.png">
           </div>
            <div class="fz16">
            购买课程<br/>
            <span class="blue">-{$integral.buyClassIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon10.png">
           </div>
            <div class="fz16">
            兑换商品<br/>
            <span class="blue">-{$integral.exchangeProductIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon11.png">
           </div>
            <div class="fz16">
            兑换红包<br/>
            <span class="blue">-{$integral.exchangeRedIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon12.png">
           </div>
            <div class="fz16">
            家教付费<br/>
            <span class="blue">-{$integral.homeClassIntegral|default='0'}</span>
            </div>
          </li>
           <li>
           <div class="ico">
           <img src="__PUBLIC__/images/integral_icon13.png">
           </div>
            <div class="fz16">
            游戏娱乐<br/>
            <span class="blue">-{$integral.gameIntegral|default='0'}</span>
            </div>
          </li>

        </ul>
    </div>
</div>
  <include file="Common:footer"/>
</body>
</html>
