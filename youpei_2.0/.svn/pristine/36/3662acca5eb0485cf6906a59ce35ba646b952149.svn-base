<include file="Common:header"/>
<style>
    .empty{
        text-align: center;
        line-height: 2.3rem;
        margin-bottom:5rem;
    }
    .Group .list-talent-product{
        margin-bottom: 9rem;
    }
    .Group .original{
        text-decoration: line-through;
    }
    .list-talent-product .price:after{
        content:none!important;
    }
    .price span{
        color: #1d709c;
        font-size: .75rem;
        margin-left: .125rem;
    }
</style>
<link rel="stylesheet" href="__PUBLIC__/css/home/boutique.css">
<div id="page_user" title="{$title}" class="kap-page kap-page-current"> 
 <div class="kap-top ty-menu-top">
    <div id="tools_msg" class="ty-tools ty-tools-inner ty-tools-current">
        <span class="title">{$title}<span class="num"></span></span>
        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn left btn-user" title="返回" data-icon="ɒ"></a>
        <a href="{:U('Index/index')}" class="btn right btn-user" title="返回首页" data-icon="Ņ"></a>
    </div>
</div>
  <div class="user-area">
     <div class="ty-user-cover img">
           <img src="/Public/images/1497578116.png" width="100%" height="auto">
     </div>
    </div>
     <div  class="Group">
      <ul class="list-talent-product">
              <volist name="boutiqueList" id="val" offset='0' length='10' key="k">
                <li class="item on" onclick="getProduct({$val['id']})">
                       <img class="thumb" src="{$val['pic_url']}">
                        <span class="title"><font style="" color="#1d709c">
                            {$val['title']}
                        </font></span>
                        <!--<span class="status"></span>-->
                        <span class="original">原价:{$val['price']['original_price']}元/{$val['unit']}</span>
                        <span class="discount">精品价:</span>
                        <span class="price">{$val['price']['now_price']}<span>元/{$val['unit']}</span></span>
                        <!--<div class="condition">
                         <label>10人成班 已有<span>30人</span>报名</label><br/>
                         <time>2017年7月31日截止</time>
                        </div>-->
                    </li>
                  </volist>
      </ul>
    </div>
    <!-- 底部菜单 -->
    <div class="kap-bottom ty-menu-bottom" style="display: none">
        <div id="tools_idx" class="ty-tools ty-tools-idx ty-tools-current">
            <a href="{:U('Index/index',array('current'=>'1'))}" style="background: url('__PUBLIC__/images/1495008448.png') no-repeat 0.7rem 1.2rem; background-size:20% 30%" <if condition='$current eq 1'>class="current"</if> data-icon="">首页</a>
            <!--<i class="border"></i>-->
            <a href="{:U('Discovery/index',array('current'=>'2'))}" style="background: url('__PUBLIC__/images/1495008486.png') no-repeat 0.7rem 1.2rem; background-size:20% 30%" class="current" data-icon="" onclick="_hmt.push(['_trackEvent', 'footbar', 'click', '发现'])">发现</a>
            <!--<i class="border"></i>-->
            <a href="{:U('Association/index',array('current'=>'3'))}" style="background: url('__PUBLIC__/images/1495008503.png') no-repeat 0.7rem 1.2rem; background-size:20% 30%" <if condition='$current eq 3'>class="current"</if>  data-icon="" onclick="_hmt.push(['_trackEvent', 'footbar', 'click', '消息'])">社群<i id="new_msg_alert"></i></a>
            <!--<i class="border"></i>-->
            <a href="{:U('Personal/index',array('current'=>'4'))}" <if condition='$current eq 4'>class="current"</if> style="background: url('__PUBLIC__/images/1495008528.png') no-repeat 0.7rem 1.2rem; background-size:15% 30%" onclick="_hmt.push(['_trackEvent', 'footbar', 'click', '我的'])">个人中心</a>
        </div>
    </div>

   </div>

<script>
    $(window).load(function (){
        setTimeout(function () {
            $('.kap-bottom').show();
        },2000)
    });
    function getProduct(id) {
        window.location.href = "{:U('Product/productDetails')}?pro_id=" + id;
    }

    var npage = 10;
    $(function () {
        $(window).scroll(function () {
            var scrollTop = $(this).scrollTop();
            var scrollHeight = $(document).height();
            var windowHeight = $(this).height();
            if (scrollTop + windowHeight == scrollHeight) {
                //加载层
                layer.load();
                setTimeout(function () {
                    layer.closeAll('loading');
                }, 1000);
                var url = "{:U('Boutique/loadingProduct')}";
                var params = {};
                params.npage = npage;
                $.post(url, params, function (result) {
                    if (result.status == 0) {
                        $(".empty").remove();
                        return $('.list-talent-product').append("<li class='empty'>没有更多了</li>");
                    }
                    $.each(result.data, function (index, value) {
                        $(".list-talent-product").append(
                            "<li class='item' onclick='getProduct( " + value['id'] + ")'>" +
                            "<img class='thumb' src='" + value['pic_url'] + "' style='background-size:cover;'>" +
                            "<span class='title'><font color='#1d709c'>" + value['title'] + "</font></span>" +
                            "<span class='original'>原价:" + value['price']['original_price'] + "元/" + value['unit'] + "</span>" +
                            "<span class='discount'>精品价:</span>" +
                            "<span class='price'>" + value['price']['now_price'] + "<span>元/" + value['unit'] + "</span></span>" +
                            "</li>");
                    });
                });
                npage += 6;
            }
        });
    });
</script>

<script src="__PUBLIC__/js/home/boutique.js" type="text/javascript" charset="utf-8"></script>
<include file="Common:footer"/>
</body>
</html>