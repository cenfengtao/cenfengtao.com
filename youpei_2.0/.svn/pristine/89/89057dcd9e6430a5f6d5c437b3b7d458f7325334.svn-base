<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>投票奖品列表</h2>
                            <a href="{:U('Vote/addVotePrize',array('vote_id' => $vote_id))}" class="btn btn-success add_button btn_access" access_id="509">添加奖品</a>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                <div id="myTabContent" class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                         aria-labelledby="home-tab">
                                        <div class="table-responsive">
                                            <table
                                                   class="table table-striped jambo_table table-bordered">
                                                <thead>
                                                <tr class="headings">
                                                    <th class="column-title">档次</th>
                                                    <th class="column-title">标题</th>
                                                    <th class="column-title">作品</th>
                                                    <th class="column-title">类型</th>
                                                    <th class="column-title">创建时间</th>
                                                    <th class="column-title">用户名称</th>
                                                    <th class="column-title">奖励</th>
                                                    <th class="column-title">奖品图片</th>
                                                    <th class="column-title">通知状态</th>
                                                    <th class="column-title no-link last"><span class="nobr">操作</span>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <foreach name="list" item="val">
                                                    <tr class="even pointer">
                                                        <td>{$val['prize_name']}</td>
                                                        <td>{$val['title']}</td>
                                                        <td>{$val['work_title']}</td>
                                                        <td>{$val['type_name']}</td>
                                                        <td>{$val['create_time'] | date="Y-m-d", ###}</td>
                                                        <td>{$val['username']}</td>
                                                        <if condition="$val['type'] eq 1">
                                                            <td>满{$val['full']}减{$val['subtract']}优惠券</td>
                                                            <elseif condition="$val['type'] eq 2" />
                                                            <td>{$val['fee']}元代金券</td>
                                                            <elseif condition="$val['type'] eq 3" />
                                                            <td>{$val['integral']}积分</td>
                                                            <else/>
                                                            <td></td>
                                                        </if>
                                                        <td><img src="{$val['image']}" alt="" width="125px"></td>
                                                        <td>{$val['template_status']==1?'未通知':($val['template_status']==2?'通知成功':'通知失败')}</td>
                                                        <td class="last">
                                                            <a href="{:U('Vote/editVotePrize',array('id'=>$val['id']))}" class="btn btn-success btn-xs btn_access" access_id="511">修改</a>
                                                            <a href="javascript:void(0)" class="btn btn-danger btn-xs btn_access table-button-delete" attr_message="确认删除该投票？" access_id="512" attr_id="{$val['id']}">删除</a>
                                                            <if condition="$val['template_status'] EQ 1">
                                                                <a href="javascript:showPrizeResult({$val['id']},{$val['user_id']})" class="btn btn-success btn-xs btn_access" access_id="510">发送结果</a>
                                                            </if>
                                                        </td>
                                                    </tr>
                                                </foreach>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
