            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>用户抽奖记录 </h2>
                          <!--   <a href="" class="btn btn-success add_button">添加</a> -->
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">抽奖用户</th>
                                        <th class="column-title">抽奖礼品</th>
                                        <th class="column-title">抽奖时间</th>
                                        <th class="column-title">奖品号码</th>
                                        <th class="column-title">状态</th>
                                        <!--<th class="column-title no-link last"><span class="nobr">操作</span></th>-->

                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="list" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['username']}</td>
                                            <td>{$val['prize']}</td>
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['code']}</td>
                                            <td>{$val['status'] == 0?'未发送':'已发送'}</td>
                                            <!--<td class="last">
                                            <if condition="$val['status'] == 0 ">
                                            <a  class="btn glyphicon btn-info btn-xs btn_access" access_id="115" onclick="send_prize({$val['id']})">发送</a>
                                            <else/>
                                             <a class="btn btn-xs btn-danger btn_access" access_id="114" href='javascript:void(0);'  onclick="cancel_send({$val['id']})">取消</a>
                                            </if>
                                            </td>-->
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                                <div class="pagination pagination-small">{$page}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
