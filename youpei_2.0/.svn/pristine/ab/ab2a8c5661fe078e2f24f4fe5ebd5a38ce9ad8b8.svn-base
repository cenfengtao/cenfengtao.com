<script type="text/javascript">
function send_prize(id) {
    var url = "{:U('Userlottery/sendPrize')}"
    $.post(url,{id:id},function (result) {
        if (result.status == 0 ) {
            return dialog.error(result.message);
        } else {
            return dialog.success(result.message,"{:U('Userlottery/index')}");
        }
    },'json');
}
function cancel_send(id) {
    var url = "{:U('Userlottery/cancel_send')}"
    $.post(url,{id:id},function (result) {
        if (result.status == 0 ) {
            return dialog.error(result.message);
        } else {
            return dialog.success(result.message,"{:U('Userlottery/index')}");
        }
    },'json');
}
</script>
