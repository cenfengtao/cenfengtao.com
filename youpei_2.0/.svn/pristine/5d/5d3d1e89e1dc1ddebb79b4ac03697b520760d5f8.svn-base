.item .user-comment{
    width:100%;
    overflow:hidden;
    line-height:2.4rem;
}
.item .user-comment .text{
    line-height:2.4rem;
    word-wrap: break-word;
    overflow: hidden;
}
.item .user-comment  img{
    display: block;
    width:2rem;
    height:2rem;
    border-radius: 6rem;
    background-size: 2rem auto;
    position: absolute;
    top:0.5rem;
    left:0;
}
.item .reply{
    width:100%;
    /*padding: 0 0 0 2rem;*/
    overflow:hidden;
    position: relative;
}
.item .reply .text{
    line-height:2.4rem;
    word-wrap:break-word;
    text-indent: 7.5rem;
    display: block;
}
.item .reply .image{
    position: absolute;
    /*float: left;*/
}
.item .reply img{
    display: inline-block;
    width:2rem;
    height:2rem;
    border-radius: 6rem;
    background-size: 2rem auto;
}