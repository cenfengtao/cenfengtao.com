            </div>
            <!--    <span class="share-invite">邀请好友</span> -->
            <div class="border item company sign" data-icon="ņ">
                <label>已报名</label><span>({$activity['max_people']})</span>
                <span class="tip" data-icon-after="Ĩ">共{$nowCount}/{$activity['max_people']}人</span>
                <a class="lj"><b></b></a>
            </div>
            <div class="numbers">
                <div class="headernav headernav2 change-headernav clr">
                    <ul class="list-tags clr">
                        <volist id="val" name="headImg" offset="0" length="6">
                            <li>
                                <div class="ico"><img src="{$val['headImg']}" alt="">
                                </div>
                            </li>
                        </volist>
                    </ul>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="act-tag fixed">
            <a href="javascript:;" id="desc" class="tag detail on">详情</a>
            <a href="javascript:;" id="costc" class="tag price">费用说明</a>
