        </div>
    </div>
    <div class="ty-page">
        <div class="ty-detail-cover Group">
            <span class="thumb"
                  style="background-image:url(__PUBLIC__/images/1494476489.jpg); background-size:cover"></span>
                <span class="desc-top">
                    <span data-icon="Ć" class="loc">{$organization['province']}{$organization['city']}{$organization['area']}{$organization['address']}</span>
                </span>
            <div class="desc row">
                <!--<span data-icon="&#xe9a9;" class="zhang">50张</span>-->
                <div class="tags">
                    <notempty name="activity['tagA']"><span class="tag purple">{$activity['tagA']}</span></notempty>
                    <notempty name="activity['tagB']"><span class="tag orange">{$activity['tagB']}</span></notempty>
                    <notempty name="activity['tagC']"><span class="tag yellow">{$activity['tagC']}</span></notempty>
                    <!-- <label class="size red">原价：6540元</label> -->
                </div>
            </div>
            <div class="border item company">
