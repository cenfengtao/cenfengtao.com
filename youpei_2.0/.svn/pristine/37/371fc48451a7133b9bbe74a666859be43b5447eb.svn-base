 $(window).load(function (){
        setTimeout(function () {
            $('.kap-bottom').show();
        },2000)
    });
    function getProduct(id) {
        window.location.href = "/index.php/Product/productDetails?pro_id=" + id;
    }

    var npage = 10;
    $(function () {
        $(window).scroll(function () {
            var scrollTop = $(this).scrollTop();
            var scrollHeight = $(document).height();
            var windowHeight = $(this).height();
            if (scrollTop + windowHeight == scrollHeight) {
                //加载层
                layer.load();
                setTimeout(function () {
                    layer.closeAll('loading');
                }, 1000);
                var url = "/index.php/Boutique/loadingProduct";
                var params = {};
                params.npage = npage;
                $.post(url, params, function (result) {

                    if (result.status == 0) {
                        $(".empty").remove();
                        return $('.list-talent-product').append("<li class='empty'>没有更多了</li>");
                    }

                    $.each(result.data, function (index, value) {
                        $(".list-talent-product").append(
                                "<li class='item' onclick='getProduct( " + value['id'] + ")'>" +
                                "<img class='thumb' src='" + value['pic_url'] + "' style='background-size:cover;'>" +
                                "<span class='title'><font color='#1d709c'>" + value['title'] + "</font></span>" +
                                "<span class='status'></span>" +
                                "<span class='original'>原价:" + value['original_price'] + "元/件</span>" +
                                "<span class='discount'>精品价:</span>" +
                                "<span class='price'>" + value['price'] + "</span>" +
                                "</li>");
                    });
                })
                npage += 6;

            }
        });
    });