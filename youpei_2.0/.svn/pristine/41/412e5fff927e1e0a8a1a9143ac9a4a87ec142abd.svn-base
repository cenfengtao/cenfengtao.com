        <script>
        $(function(){
            // 点击图片显示提示方式弹框
            $(".alert img").click(function(){
                $(".alertBox").show();
            })
            // 点击按钮关闭提示方式弹框
            $(".closeAlert").click(function(){
                $(".alertBox").hide();
            })
            // 点击图片显示课程安排弹框
            $(".upload img").click(function(){
                $(".courseBox").show();
            })
            // 点击按钮关闭课程安排弹框
            $(".closeCourse").click(function(){
                $(".courseBox").hide();
            })
            // 点击提示方式弹框中的复选框实现字体颜色变化
            $(".check").click(function(){
                    var id=$(this).prev().attr("id");
                    if($(this).prev().is(":checked")==true){
                        if(id=="duan"){
                            $(this).parent().parent().next().css("color","black")
                        }
                        $(this).parent().prev().css("background","black");
                        $(this).parent().parent().css("color","black");
                    }else{
                        if(id=="duan"){
                            $(this).parent().parent().next().css("color","#386998")
                        }
                        $(this).parent().prev().css("background","#386998");
                        $(this).parent().parent().css("color","#386998");
                    }
                
            })


            // 点击提示方式弹框中的字体实现字体颜色变化
            $(".info ul li span").click(function(){
                var id=$(this).next().attr("id");
                if($(this).next().is(":checked")==true){
                    if(id=="duan"){
                        $(this).parent().parent().next().css("color","black")
                    }
                    $(this).parent().prev().css("background","black");
                    $(this).parent().parent().css("color","black");
                }else{
                    if(id=="duan"){
                        $(this).parent().parent().next().css("color","#386998")
                    }
                    $(this).parent().prev().css("background","#386998");
                    $(this).parent().parent().css("color","#386998");
                }
            })

            // 静态移除课程安排的li列表
            $(".time img").click(function(){
                $(this).parent().parent().remove()
            })
            var date=new Date();
            var year=date.getFullYear();
            var month=date.getMonth()+1;
            $(".date .title").html(year+'年'+month+'月')
        })
            

        </script>
