<style>

</style>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>活动海报列表</h2>
                            <a href="{:U('PosterStyle/addPoster')}" class="btn btn-success add_button btn_access" access_id="286">添加海报</a>
                            <div class="clearfix"></div>
                        </div>
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active btn_access" access_id="16"><a
                                    href="{:U('PosterStyle/index')}">海报列表</a>
                            </li>
                        </ul>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped jambo_table table-bordered">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">标题</th>
                                        <th class="column-title">创建时间</th>
                                        <th class="column-title">机构</th>
                                        <th class="column-title">图片</th>
                                        <th class="column-title no-link last"><span class="nobr">操作</span></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="list" item="val">
                                        <tr class="even pointer">
                                            <td>{$val['title']}</td>
                                            <td>{$val['create_time']|date="Y-m-d H:i:s",###}</td>
                                            <td>{$val['org_name']}</td>
                                            <td><img src="{$val['image']}" style="width:60px;height:40px" alt=""></td>
                                            <td class="last">
                                                <a href="javascript:void(0)" onclick="getById({$val['id']})"
                                                   class="btn btn-info btn-xs btn_access" access_id="287">修改</a>
                                                <a href="javascript:void(0)" attr_message="确认删除该海报？" attr_id="{$val['id']}"
                                                   class="btn btn-infos btn-xs table-button-delete btn_access" access_id="288">删除</a>
                                            </td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
