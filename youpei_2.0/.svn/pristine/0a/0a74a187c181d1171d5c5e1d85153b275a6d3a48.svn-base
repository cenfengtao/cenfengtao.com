            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn left btn-user" title="返回" data-icon="ɒ"></a>

        </div>
    </div>
     <div class="ty-page user-area">
        <if condition="$object neq '' and $object['is_show'] eq 0">
            <div class="ty-user-cover" data-kap-bg=""
                 style="background:url(/{$object.image}); background-size:100% 100%">
                <else/>
                <div class="ty-user-cover" data-kap-bg=""
