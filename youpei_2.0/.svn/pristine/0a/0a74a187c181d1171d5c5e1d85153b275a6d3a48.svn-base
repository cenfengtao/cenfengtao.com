                        </div>
                        <div class="schedule">
                            <if condition="$isTodayComment eq 1">
                                <span>已完成</span>
                                <span data-icon="&#x174;"></span>
                                <else/>
                                <span>未完成</span>
                                <div class="do-tasks" onclick="today_share()">做任务</div>
                            </if>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="high">
                        <div class="tasks">
                            <span>发展1个学友</span>
                            <label>+{$taskIntegral['task_schoolmate_integral'] |default=0} 积分</label>
                        </div>
                        <div class="schedule">
                            <if condition="$isTodayInvite eq 1">
                                <span>已完成</span>
                                <span data-icon="&#x174;"></span>
                                <else/>
                                <span>未完成</span>
                                <div class="do-tasks">做任务</div>
                            </if>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <!-- <div class="hotel-cat"></div> -->
        <div class="item love border"><i class="loveiocn">&nbsp;</i><label>我的活动</label>
            <!--<span class="tip" data-icon-after="Ĩ">查看更多</span>-->
        </div>

        <div class="yp-love-rec">
            <ul class="yp-love">
                <li><a class="" href="/index.php/Vote/userWorks.html"><img src="/Public/images/myVote.png" alt=""></a></li>
                <li><a class="" href="javascript:void(0);" onclick="hint()"><img src="/Public/images/activity2.jpg" alt=""></a></li>
                <li><a class="" href="javascript:void(0);" onclick="hint()"><img src="/Public/images/myApoint.png" alt=""></a></li>
                <li><a class="" href="javascript:void(0);" onclick="hint()"><img src="/Public/images/myShop.png" alt=""></a></li>
            </ul>
        </div>

        <div class="item youpei border"><i class="youpeiiocn">&nbsp;</i><label>我的优培</label></div>
        <div class="panel panel1">
            <span class="btn footprint" onclick="hint()">足迹</span>
            <a href="{:U('Collect/index')}" class="btn follow">收藏</a>
            <span onclick="getGamesPrize()" class="btn appointment">活动奖品</span>
            <a href="{:U('Message/index')}" class="btn msg ">消息 <if condition="$sum eq 0"><else/><span class="item-new">{$sum}</span></if></a>
            <span class="btn profile" onclick="hint()">个人资料</span>
        </div>
        <div class="ty-qrcode-area" style="display: none"><span class="qrcode"><img src="/Public/images/618348288222690487.jpg" alt="" width="200" height="200">请长按二维码关注</span></div>

        <div class="ty-qrcode-jg" style="display: none"><span class="qrcode"><img src="{:U('Qrcode/getUserMsg',array('user_id' => $user['id']))}">机构扫码</span></div>

        <div style="text-align:center; width:100%; line-height:4rem; clear:both; color:#999; font-size:75%;background: white;"><a
                style="color:#999; text-decoration:none" href="#">粤ICP备17008351号</a></div>
    </div>
</div>
</div>
<include file="Common:menu"/>
</div>
</div>

<script type="text/javascript">

    $(function () {
        var mySwiper = new Swiper('.swiper-container', {
            speed: 500,
            onSlideChangeStart: function () {
                $(".pocket li").removeClass('current')
                $(".pocket li").eq(mySwiper.activeIndex).addClass('current')
            }
        })

        $(".pocket li").on('touchstart mousedown', function (e) {
            e.preventDefault()
            $(".pocket .current").removeClass('current')
            $(this).addClass('current')
            mySwiper.swipeTo($(this).index())
            var url = "{:U('Friends/index')}";
            if ($(this).index() == 3) {
                window.location.href = url;
            }
        })
       $(".pocket li").click(function(e){
    e.preventDefault()
  })
    });

    function stopPropagation(e) {
if (e.stopPropagation)
e.stopPropagation();
else
e.cancelBubble = true;
} 

 $('.tipimg').click(function(){
   $(".ty-qrcode-area").css("display","block");
 
 })

$(document).bind('click',function(){
$('.ty-qrcode-area').css('display','none');
});

$('.tipimg').bind('click',function(e){
stopPropagation(e);
}); 

$('.jgqrcode').click(function(){
   $(".ty-qrcode-jg").css("display","block");
 
 })

$(document).bind('click',function(){
$('.ty-qrcode-jg').css('display','none');
});

$('.jgqrcode').bind('click',function(e){
stopPropagation(e);
}); 


$(document).click(function(event){
event.stopPropagation();
});

    function red(id) {
        layer.open({
            type: 2,
            title: '积分兑红包',
            shadeClose: false,
            shade: 0.8,
            area: ['80%', '60%'],
            content: ["{:U('Personal/red',array('id'=>'" + id + "'))}", 'no'] //iframe的url
//            content:"<section></section>"
        });
    }

    function today_signin() {
        var url = "{:U('Personal/today_signin')}";
        $.post(url, function (res) {
            if (res.status == 1) {
                alert(res.msg);
                var html = '';
                html += '<div class="schedule" id="signin">';
                html += '<span>已完成</span>';
                html += '<span data-icon="&#x174;"></span>';
                html += '<div>';
                $("#signin").replaceWith(html);
                $("#nowIntegral").append(" +" + res.data['addIntegral']);
                $("#getIntegral").append(" +" + res.data['addIntegral'])
            } else {
                alert(res.msg);
            }
        })
    }

    function signin(){
        window.location.href = "{:U('Sign/index')}";
    }

    function today_share() {
        window.location.href = "{:U('Article/index')}";
    }

    function getGamesPrize() {
        window.location.href = "{:U('Games/prize')}";
    }

    function news() {
        alert('暂时没有最新消息！');
    }
</script>
