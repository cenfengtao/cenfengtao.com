                            </if>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="high">
                        <div class="tasks">
                             <span>转发文章</span>
                            <label>+{$taskIntegral['task_share_integral'] |default=0} 积分</label>
                        </div>
                        <div class="schedule">
                            <if condition="$isShare eq 1">
                                <span>已完成</span>
                                <span data-icon="&#x174;"></span>
                                <else/>
                                <span>未完成</span>
                                <div class="do-tasks" onclick="today_share()">做任务</div>
                            </if>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="high">
