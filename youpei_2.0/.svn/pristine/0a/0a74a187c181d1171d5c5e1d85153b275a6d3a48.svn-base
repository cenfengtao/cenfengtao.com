                            <label>+{$taskIntegral['task_read_integral'] |default=0} 积分</label>
                        </div>
                        <div class="schedule">
                            <if condition="$todayReadCount egt 3">
                                <span>已完成</span>
                                <span data-icon="&#x174;"></span>
                                <else/>
                                <span>未完成</span>
                                <div class="do-tasks" onclick="today_share()">做任务</div>
                            </if>
                        </div>
                    </div>
                </li>
                <li>
