<!-- self -->
<script>
    $('.product_down').click(function () {
        var id = $(this).attr('attr_id');
        var message = $(this).attr('attr_message');
        var url = "{:U('Product/soldOut')}";
        layer.open({
            type: 0,
            title: '确认信息',
            btn: ['确认', '取消'],
            icon: 3,
            closeBtn: 2,
            content: message,
            yes: function () {
                soldOut(url, {'id': id});
            }
        });
    });
    function soldOut(url, data) {
        $.post(url, data, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, '');
            } else {
                return dialog.error(result.message);
            }
        }, 'JSON');
    }
    function regainCheck(id) {
        var url = "{:U('Check/regainCheckProduct')}";
        $.post(url, {id: id}, function (result) {
            if (result.status == 1) {
                return dialog.success(result.message, "{:U('Product/proUpList')}");
            } else {
                return dialog.error(result.message);
            }
        }, 'json');
    }
    function seek() {
        var title = $("input[name='title']").val();
        if(!title){
            alert('内容不能为空');
        }else{
            window.location.href = "{:U('Product/search')}?title="+title;
        }
    }
</script>
</body>
</html>