<style>
    #datatable_paginate{display: none;}
    #datatable_info{display:none;}
    .pagination ul a{color:#008DE7}
    .dataTables_length{
        display: none;
    }
    .dataTables_filter{
        display: none;
    }
    .form-control{
        width:75%;
        float: left;
    }
    .search{
        width:80%;
        float: right;
    }
    .search span{
        width:25%;
        border:1px solid #ccc;
        text-align: center;
        float: left;
        font-weight:600;
        line-height:2.4rem;
        font-size: 1.5rem;
    }
</style>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <include file="Common:menu"/>
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>产品列表</h2>
                            <a href="{:U('Product/addProduct')}" class="btn btn-success add_button btn_access" access_id="48">添加课程</a>
                            <a href="{:U('Product/addRealProduct')}" class="btn btn-success add_button btn_access" access_id="161">添加商品</a>
                            <div class="clearfix"></div>
                        </div>
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active btn_access" access_id="48"><a href="{:U('Product/proUpList')}">上架商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="276"><a href="{:U('Product/fireList')}">热门课程</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="279"><a href="{:U('Product/activityList')}">节点活动商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="49"><a href="{:U('Product/rushList')}">抢购课程</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="290"><a href="{:U('Product/bargainList')}">砍价商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="50"><a href="{:U('Product/groupProductList')}">团购商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="51"><a href="{:U('Product/hotList')}">精选商品</a>
                            </li>
                            <li role="presentation" class="btn_access" access_id="52"><a href="{:U('Product/proDownList')}">下架商品</a>
                            </li>
                        </ul>
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6"><div id="" class="search"><input type="text" class="form-control input-sm btn_access" access_id="264" name="title" placeholder="请输入商品名称" aria-controls="datatable"><span class="btn_access" access_id="264" onclick="seek()">查找</span></div></div>
                        <div class="x_content">
                            <div id="myTabContent" class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                         aria-labelledby="home-tab">
                                        <div class="table-responsive">
                                            <table id="table"
                                                   class="table table-striped jambo_table table-bordered">
                                                <thead>
                                                <tr class="headings">
                                                    <th class="column-title">商品名称</th>
                                                    <th class="column-title">所属机构</th>
                                                    <th class="column-title">现价</th>
                                                    <th class="column-title">库存</th>
                                                    <th class="column-title">创建时间</th>
                                                    <th class="column-title">类型</th>
                                                    <th class="column-title">状态</th>
                                                    <th class="column-title">失败原因</th>
                                                    <th class="column-title no-link last"><span class="nobr">操作</span>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <foreach name="upList" item="val">
                                                    <tr class="even pointer">
                                                        <td>{$val['title']}</td>
                                                        <td>{$val['org_name']}</td>
                                                        <td>{$val['price']}</td>
                                                        <td>{$val['count']}</td>
                                                        <td>{$val['create_time']|date="Y-m-d",###}</td>
                                                        <td>{$val['type'] == 1?'课程':'普通商品'}</td>
                                                        <td>{$val['check_status'] == 1?'审核中':($val['check_status'] == 2?'通过':'审核失败')}</td>
                                                        <td>{$val['err_msg']}</td>
                                                        <td class="last">
                                                            <if condition="$val['type'] eq 1">
                                                                <a href="{:U('Product/editProduct',array('id'=>$val['id']))}" class="btn btn-info btn-xs btn_access" access_id="53">修改</a>
                                                                <else/>
                                                                <a href="{:U('Product/editRealProduct',array('id'=>$val['id']))}" class="btn btn-info btn-xs btn_access" access_id="162">修改</a>
                                                            </if>

                                                            <a href="javascript:void(0)" class="product_down btn btn-danger btn-xs btn_access" access_id="54" attr_message="确认下架该商品？" attr_id="{$val['id']}">下架</a>
                                                            <if condition="$val['check_status'] eq 3">
                                                                <a href="javascript:regainCheck({$val['id']})"
                                                                   class="btn btn-success btn-xs btn_access" access_id="152">重新审核</a>
                                                            </if>
                                                        </td>
                                                    </tr>
                                                </foreach>
                                                </tbody>
                                            </table>
                                            <div class="pagination pagination-small">{$page}</div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <include file="Common:footer"/>
        <!-- /footer content -->
    </div>
</div>
<!-- bootstrap-progressbar -->
<script src="__PUBLIC__/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
