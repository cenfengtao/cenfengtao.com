    <script>
        function getPar(id) {
            window.location.href = "{:U('Parenting/productDetails')}?par_id=" + id;
        }
        function getCateListById(id) {
            window.location.href = "{:U('Parenting/index')}?cate_id=" + id;
        }
        $(function () {
            $(".ty-cat-tags span").click(function () {
                $(this).siblings('span').removeClass('on');  // 删除其他兄弟元素的样式
                $(this).addClass('on');
            });

        });

        var npage = 10;
        $(function () {
            $(window).scroll(function () {
                var scrollTop = $(this).scrollTop();
                var scrollHeight = $(document).height();
                var windowHeight = $(this).height();
                var cate_id = $('.ty-cat-tags .on').attr('attr_id');
                if (scrollTop + windowHeight == scrollHeight) {
                    //加载层
                    layer.load();
                    setTimeout(function () {
                        layer.closeAll('loading');
                    }, 1000);
                    var url = "{:U('Parenting/loadingParenting')}";
                    var params = {};
                    params.cate_id = cate_id;
                    params.npage = npage;
                    $.post(url, params, function (result) {

                        if (result.status == 0) {
                            $(".empty").remove();
                            return $('.list').append("<li class='empty'>没有更多了<br>粤ICP备17008351号</li>");
                        }

                        $.each(result.data, function (index, value) {
                            $(".list-card").append(
                                    "<li class='item'>" +
                                            "<a href='javascript:viod(0)' onclick='getPar( " + value['id'] + ")'>"+
                                            "<span class='thumb' style='background-image:url(" + value['image'] + "); background-size:cover'></span>"+
                                            "<div class='desc-top'>"+
                                            "<span data-icon='Ć' class='loc'>" + value['city'] + value['area'] + value['add'] +"</span>"+
                                            "</div>"+
                                            "<div class='desc'>"+
                                            "<h3 class='title'>" + value['title'] + "</h3>"+
                                            "<span data-icon='Š' class='startoff'>" + value['time'] + "</span>"+
                                            "<span class='price prices'>" + value['price'] + "</span>"+
                                            "<span class='talent'><i class='avatar'><img src='" + value['logo'] + "' alt=''></i></span>"+
                                                "<div class='tags'>"+
                                                "<span class='tag red'>" + value['tagA'] + "</span>"+
                                                "<span class='tag'>" + value['tagB'] + "</span>"+
                                                "<span class='tag'>" + value['tagC'] + "</span>"+
                                                "</div>"+
                                            "</div>"+
                                            "</a>"+
                                    "</li>");
                        });
                    })
                    npage += 6;
                }
            });
        });
    </script>
