<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
        <title>优培圈</title>
        <!-- 向下滑动加载的图片样式，需放在外链的第一位 -->
        <link rel="stylesheet" href="http://www.youpei-exc.com/Public/Home/layer/skin/default/layer.css?v=3.0.3303" id="layuicss-skinlayercss">
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/common.css"/>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/com.css"/>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/pageloader.css"/>
        <link rel="stylesheet" type="text/css" href="__PUBLIC__/css/home/myGroup.css"/>
        <!-- 判断是IE时执行 -->
        <script type="text/javascript">
            if(/msie/i.test(navigator.userAgent)){window.location.href="http://www.youpei-exc.com/"}
        </script>    
    </head>
    <body class="kap-loading ty-view-all">
        <include file="Common:common"/>
        <header class="header">
            <a href="javascript:history.back()" class="back">
                <img src="../../../../Public/images/back.png" alt="">
            </a>
            <h3>我的团</h3>
            <a href="../Index/index.html" class="home" data-icon="Ņ"></a>
        </header>
        <article class="middle">
            <section class="classify">
                <div class="content">
                    <foreach name="groupList" item="val">
                        <if condition="$val.type eq 1"> <!-- 课程 -->
                            <div class="courseList">
                                <ul>
                                    <li>
                                        <div class="img">
                                            <img src="{$val['image']}" onclick="getGroup({$val['id']})" class="courseImg">
                                            <div class="tap">
                                                <img src="../../../../Public/images/imgTap.png" alt="" class="logoTap">
                                                <img src="../../../../Public/images/imgLogo.png" alt="" class="imgLogo">
                                            </div>
                                            <div class="type">
                                                <foreach name="val.tags" item="v">
                                                    <span>{$v}</span>
                                                </foreach>
                                            </div>
                                        </div>
                                        <div class="text">
                                            <div class="time">
                                                <img src="../../../../Public/images/indexFilter.png" alt="">
                                                <span class="end_time" value="{$val['end_time']}"></span>
                                            </div>
                                            <h3>{$val.title}</h3>
                                            <span class="groupPrice">拼团价：<span class="moneySign">￥</span><strong>{$val.price}</strong></span>
                                            <p class="originalPrice">原价：{$val.original_price}/{$val.unit}</p>
                                            <span class="groupStatus">{$val['status'] == 1? '组团中':($val['status'] == 2 ? '等待开团':($val['status'] == 3? '已开团':($val['status'] == 5?'已取消':($val['status'] == 4?'等待开团':'已过期'))))}</span>
                                            <a href="javascript:createGroupPoster({$val['id']})">邀请朋友组团</a>
                                            <div class="groupNum">
                                                <span class="finished">已拼团人数 : (<span class="nowPeople">{$val['orderCount']}</span>/<span class="allPeople">{$val['max_people']}</span>)</span>
                                                <div class="bar"><span class="progress"></span></div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </if>
                        <if condition="$val.type eq 2">
                            <div class="shopGroups">
                                <ul>
                                    <li>
                                        <div class="img">
                                            <div class="time">
                                                <img src="../../../../Public/images/limitFilter.png" alt="">
                                                <span class="end_time" value="{$val['end_time']}"></span>
                                            </div>
                                            <div class="type">
                                                <span class="originalPrice">原价:￥{$val.original_price}</span>
                                                <foreach name="val.tags" key="k" item="v">
                                                    <if condition="$k eq $val['tags']|count - 1">
                                                        <span class="tab" style="margin-right: 0.35rem;">{$v}</span>
                                                        <else/>
                                                        <span class="tab">{$v}</span>
                                                    </if>
                                                </foreach>
                                            </div>
                                            <img src="{$val['image']}" onclick="getGroup({$val['id']})">
                                        </div>
                                        <div class="text">
                                            <h3>{$val['title']}</h3>
                                            <div>
                                                <span class="groupPrice">团购价:￥<strong>{$val['price']}</strong></span>
                                                <a href="javascript:createGroupPoster({$val['id']})">邀请朋友组团</a>
                                            </div>
                                            <div class="groupNum">
                                                <span class="finished">已拼团人数 : (<span class="nowPeople">{$val['orderCount']}</span>/<span class="allPeople">{$val['max_people']}</span>)</span>
                                                <div class="bar"><span class="progress"></span></div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </if>
                    </foreach>
                </div>
            </section>
        </article>
        <footer class="footer">
            <!-- <div></div> -->
            <ul class="icon">
                <li>
                    <img src="__PUBLIC__/image/circle.png" alt="">
                    <a href="/index.php/Groups/index.html">
                        <img src="__PUBLIC__/images/groupsIcon3.png"/>
                        <span>参团</span>
                    </a>
                </li>
                <li>
                    <img src="__PUBLIC__/image/circle.png" alt="">
                    <a href="/index.php/Groups/addGroup.html">
                        <img src="__PUBLIC__/images/groupsIcon2.png"/>
                        <span>愿望单</span>
                    </a>
                </li>
                <li>
                    <img src="__PUBLIC__/image/circle.png" alt="">
                    <a href="/index.php/Groups/myGroups.html">
                        <img src="__PUBLIC__/images/groupsIcon1.png"/>
                        <span>我的团</span>
                    </a>
                </li>
            </ul>
        </footer>
        <script src="__PUBLIC__/Home/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
        <script src="__PUBLIC__/Home/js/jquery.touchSwipe.min.js" type="text/javascript" charset="utf-8"></script>
        <script src="__PUBLIC__/Home/js/pageloader.js" type="text/javascript" charset="utf-8"></script>
        <script src="__PUBLIC__/js/home/font.js" type="text/javascript" charset="utf-8"></script>
        <script type="text/javascript" src="__PUBLIC__/js/home/swiper.min.js" ></script>
        <!-- <script src="__PUBLIC__/Home/js/idangerous.swiper.min.js"></script> -->
        <script src="/Public/Home/layer/layer.js"></script>
        <script src="__PUBLIC__/js/home/myGroups.js" type="text/javascript" charset="utf-8"></script>
        <script type="text/javascript">
        
        </script>
    </body>
</html>
