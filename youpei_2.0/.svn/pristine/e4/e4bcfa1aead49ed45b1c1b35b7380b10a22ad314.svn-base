.img span.on{
	border: 0.06rem solid #6eea00;
}


.box{
	height: 100%;
	width: 100%;
	position: fixed;
	z-index: 10000;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.5);
}
.box .content{
	height: 6.77rem;
	width: 4.725rem;
	background: white;
	margin: auto;
	bottom: 0;
	top: 0;
	left: 0;
	right: 0;
	position: absolute;
	z-index: 20000;
}
.box .content img:first-child{
	width: 100%;
	height: 100%;
}
.close{
	position: absolute;
	right: 0;
	top: 0;
	width: 0.67rem;
	height: 0.67rem;
}
.box1{
	position: absolute;
	bottom: 1.9rem;
	margin: 0 auto;
	left: 0;
	right: 0;
	width: 2.8rem;
	height: 2.02rem;
}
.gift{
    font-size: 0.55rem;
    font-family: "宋体";
    position: absolute;
    bottom: 4.4rem;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 4.5rem;
    height: 1.7rem;
    color: white;
    text-align: center;
}
.gift span,.gift1 span ,.gift2 span{
	display: block;
}
.giving,.giving1,.giving2{
	text-align: center;
	font-size: 0.4rem;
    font-family: "宋体";
    height: 0.85rem;
    line-height: 0.85rem;
}
.code,.code1,.code2{
	text-align: center;
	font-size: 0.4rem;
	height: 0.85rem;
    line-height: 0.85rem;
}

.gift1{
	font-size: 0.55rem;
	font-family: "宋体";
	position: absolute;
	bottom: 6rem;
	left: 0;
	right: 0;
	margin: 0 auto;
	width: 4.5rem;
	height: 1.7rem;
	color: white;
	text-align: center;
}

.gift2{
	font-size: 0.55rem;
	font-family: "宋体";
	position: absolute;
	bottom: 4.1rem;
	left: 0;
	right: 0;
	margin: 0 auto;
	width: 4.5rem;
	height: 1.7rem;
	color: white;
	text-align: center;
}
.step{
	width: 80%;
	margin: 0.5rem auto 0.5rem;
	padding-bottom: 0.5rem;
}
.step p{
	color: orange;
	font-weight: bold;
	font-size: 0.45rem;
}
.step p:first-child{
	font-size: 0.55rem;
}
.step p:nth-child(2){
		text-indent: 2em;
}

.more-message {
	position:absolute;
	left:0;
	right:0;
	bottom:2rem;
	margin:0 auto;
	width:70%;
	height:1.5rem;
	text-align: center;
	background: #6cd7dc;
}